<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/top_rounded_bg"
    tools:context=".fragments.RequestAmountBottomSheet">

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@drawable/bg_core_colorfill"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_28sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requesting [Alison L]"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_11ssp"
            android:layout_marginRight="@dimen/_13ssp"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_7sdp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160.00"
                android:textSize="@dimen/_35sdp"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/primary_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CYN"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/opensans_bold"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_6sdp"
                android:paddingTop="@dimen/_24sdp"
                android:paddingBottom="@dimen/_9sdp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_marginLeft="@dimen/_11sdp"
            android:layout_marginRight="@dimen/_11sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recipient’s Address"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="#767676"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textFontWeight="1"
                android:layout_weight="1"
                android:text="Hgj34239274"
                android:textSize="@dimen/_11ssp"
                android:gravity="right"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_10sdp"

                />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_copy"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#767676"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_21sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“Hey friend, thanks for dinner the other night. \nHere’s what you owe me for my meal.”"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="#151515"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_21sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            />
        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/lay_lock_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_21sdp"
            android:background="@drawable/shape_round_rectable"
            android:elevation="8dp"
            app:layoutDescription="@xml/activity_swipe_unloack_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:text="Slide to Confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/im_lock"
                app:layout_constraintStart_toEndOf="@+id/im_lock"
                app:layout_constraintTop_toTopOf="@+id/im_lock" />


            <androidx.cardview.widget.CardView
                android:id="@+id/im_lock"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardBackgroundColor="@color/primary_color"
                app:cardCornerRadius="@dimen/_22sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_double_left"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/im_lock_"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:visibility="invisible"
                app:cardCornerRadius="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:background="@color/primary_color" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.motion.widget.MotionLayout>



</LinearLayout>