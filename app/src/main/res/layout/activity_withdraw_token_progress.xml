<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutConfetti"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context="com.coyni.android.view.WithdrawTokenProgressActivity">

    <ImageView
        android:id="@+id/imgSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_dept_sucess"></ImageView>

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSuccess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/opensans_semibold"
        android:text="@string/inprog"
        android:textColor="@color/status"
        android:textSize="@dimen/text_size_22sp"></TextView>

    <RelativeLayout
        android:id="@+id/layoutBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHead"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvDepositHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:text="Bank Deposit Amount"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:id="@+id/tvDeptAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/opensans_bold"
            android:text="48.00 USD"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:id="@+id/tvPayMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDepositHead"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_regular"
            android:text="To Recipient"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:id="@+id/tvBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDepositHead"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tvCardNo"
            android:fontFamily="@font/opensans_bold"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:id="@+id/tvCardNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDepositHead"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_bold"
            android:singleLine="true"
            android:text=".... 3679"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_15sp"></TextView>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tvPayMethod"
            android:layout_marginTop="25dp"
            android:background="#F3F3F3"></View>

        <TextView
            android:id="@+id/tvDepIdHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Withdrawal ID"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <ImageView
            android:id="@+id/imgBCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tvDepositId"
            android:src="@drawable/ic_copy"></ImageView>

        <TextView
            android:id="@+id/tvDepositId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_bold"
            android:singleLine="true"
            android:text="1IHDCBDCBK..."
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:id="@+id/tvBalHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDepIdHead"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Account Balance"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDepIdHead"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_bold"
            android:text="98.00 GBT"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutGift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHead"
        android:layout_marginTop="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:text="Gift Card Amount"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/opensans_bold"
            android:text="52.00 GBT"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <LinearLayout
            android:id="@+id/layoutSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAmount"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:fontFamily="@font/opensans_regular"
                android:text="Send to"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_14sp"></TextView>

            <TextView
                android:id="@+id/tvSendTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="0.7"
                android:fontFamily="@font/opensans_bold"
                android:gravity="right"
                android:singleLine="true"
                android:text="john@mail.com"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_14sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutSend"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_regular"
                android:singleLine="true"
                android:text="For Amazon"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_14sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBrand"
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tvGiftAmount"
                    android:src="@drawable/ic_brand_small"></ImageView>

                <TextView
                    android:id="@+id/tvGiftAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:text="50.00 USD"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_14sp"></TextView>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/layoutBrand"
            android:layout_marginTop="25dp"
            android:background="#F3F3F3"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Order ID"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <ImageView
            android:id="@+id/imgGCCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tvOrderId"
            android:src="@drawable/ic_copy"></ImageView>

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_bold"
            android:text="1IHDCBDCBK..."
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderId"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Remaining Balance"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:id="@+id/tvRemBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderId"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_bold"
            android:text="0.00 GBT"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutDone"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@color/btnback"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Done"
            android:textColor="@color/headcolor"
            android:textSize="21sp"></TextView>
    </LinearLayout>
</RelativeLayout>