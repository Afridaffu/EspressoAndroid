<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_base"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.business.ReserveReleasesActivity">

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_11sdp"
        android:fontFamily="@font/opensans_semibold"
        android:text="Reserve Release"
        android:textColor="@color/primary_black"
        android:textSize="@dimen/_11ssp" />

    <TextView
        android:id="@+id/ammont_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/opensans_bold"
        android:text="20,000.00"
        android:textColor="@color/xdark_gray"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/status_TV"
        android:layout_width="@dimen/_67sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_below="@+id/nameTv"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@drawable/txn_completed_bg"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:text="Open"
        android:textColor="@color/xdark_gray"
        android:textSize="@dimen/_8ssp" />

    <TextView
        android:id="@+id/dateTime_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ammont_TV"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/opensans_semibold"
        android:text="Release: 06/23/2021 @ 2:20am"
        android:textColor="@color/xdark_gray"
        android:textSize="@dimen/_9ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_below="@id/dateTime_TV"
        android:background="@color/vlight_gray"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        />
</RelativeLayout>