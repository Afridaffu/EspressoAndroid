<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_rounded_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_20sdp"
    android:paddingRight="@dimen/_20sdp"
    android:paddingBottom="@dimen/_20sdp">

    <View
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_28sdp"
        android:background="@drawable/bg_core_colorfill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/opensans_bold"
        android:text="Secure Pay"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"></TextView>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/opensans_semibold"
        android:text="Enable Face ID to Use face recognition to complete payments quickly and securely."
        android:textColor="@color/primary_black"
        android:textSize="@dimen/_12ssp"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/enableFaceCV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/primary_color"
        app:cardCornerRadius="@dimen/_22sdp">

        <TextView
            android:id="@+id/tvEnableFace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:text="Enable Face ID"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutNotnowFace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:background="@drawable/shape_green_round_rect_core"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:text="Not Now"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dontRemindFace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="center"
        android:text="Donâ€™t Remind Me Again"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_12ssp" />

</LinearLayout>