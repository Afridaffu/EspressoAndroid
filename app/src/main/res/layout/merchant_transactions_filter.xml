<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/filter_top_radius"
    android:orientation="vertical"
    android:paddingStart="@dimen/_20sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <View
        android:layout_width="@dimen/_43sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_28sdp"
        android:background="@drawable/button_background"
        android:gravity="center" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/opensans_bold"
                android:text="Filter"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/resetFiltersTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="right"
                android:text="Reset all filters"
                android:textColor="#00a6a2"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/applyFilterBtnCV"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/opensans_semibold"
            android:text="Transaction Type"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/transTypeSalesOrderToken"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/sale_order_tokens"
                android:textAlignment="center"
                android:textColor="@color/chip_text_color"
                android:textSize="@dimen/_11ssp"
                app:chipBackgroundColor="@color/chipbackgroundcolor"
                app:chipMinHeight="@dimen/_32sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/transTypeRefund"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/refund"
                android:textAlignment="center"
                android:textColor="@color/chip_text_color"
                android:textSize="@dimen/_11ssp"
                app:chipBackgroundColor="@color/chipbackgroundcolor"
                app:chipMinHeight="@dimen/_32sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/transTypeSO"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/merchant_payout"
                android:textAlignment="center"
                android:textColor="@color/chip_text_color"
                android:textSize="@dimen/_11ssp"
                android:visibility="gone"
                app:chipBackgroundColor="@color/chipbackgroundcolor"
                app:chipMinHeight="@dimen/_32sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/transTypeMerchantPayout"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/merchant_payout"
                android:textAlignment="center"
                android:textColor="@color/chip_text_color"
                android:textSize="@dimen/_11ssp"
                app:chipBackgroundColor="@color/chipbackgroundcolor"
                app:chipMinHeight="@dimen/_32sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/transTypeMonthlyServiceFee"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/monthly_service_fee"
                android:textAlignment="center"
                android:textColor="@color/chip_text_color"
                android:textSize="@dimen/_11ssp"
                app:chipBackgroundColor="@color/chipbackgroundcolor"
                app:chipMinHeight="@dimen/_32sdp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/transaction_status"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/transStatusCompleted"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/completed"
                android:textAlignment="center"
                android:textColor="@color/chip_text_color"
                android:textSize="@dimen/_11ssp"
                app:chipBackgroundColor="@color/chipbackgroundcolor"
                app:chipMinHeight="@dimen/_32sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/transStatusRefund"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/refund"
                android:textAlignment="center"
                android:textColor="@color/chip_text_color"
                android:textSize="@dimen/_11ssp"
                app:chipBackgroundColor="@color/chipbackgroundcolor"
                app:chipMinHeight="@dimen/_32sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/transStatusPartialRefund"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/partial_refund"
                android:textAlignment="center"
                android:textColor="@color/chip_text_color"
                android:textSize="@dimen/_11ssp"
                app:chipBackgroundColor="@color/chipbackgroundcolor"
                app:chipMinHeight="@dimen/_32sdp" />

            <com.google.android.material.chip.Chip
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/chip_text_color"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible"
                app:chipBackgroundColor="@color/chipbackgroundcolor" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/transaction_amount"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_small_corners">

                <EditText
                    android:id="@+id/transAmountStartET"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:autofillHints="AUTOFILL_HINT_SMS_OTP"
                    android:background="@android:color/transparent"
                    android:digits="0123456789."
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="(CYN)"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/primary_black"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_11sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/to"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_small_corners">

                <EditText
                    android:id="@+id/transAmountEndET"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="(CYN)"
                    android:autofillHints="AUTOFILL_HINT_SMS_OTP"
                    android:imeOptions="actionDone"
                    android:inputType="numberPassword"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/primary_black"
                    android:textColorHint="@color/light_gray"
                    android:textIsSelectable="false"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/date"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:id="@+id/dateRangePickerLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_23sdp"
            android:background="@drawable/bg_small_corners"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/datePickET"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_square_withoutcolor_corners"
                android:clickable="true"
                android:editable="false"
                android:focusable="true"
                android:fontFamily="@font/opensans_semibold"
                android:hint="@string/date_range"
                android:textColor="@color/primary_black"
                android:textColorHint="@color/light_gray"
                android:textCursorDrawable="@drawable/cursor_color_text"
                android:textSize="@dimen/_11ssp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_calendar_icon" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/applyFilterBtnCV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:gravity="center"
        app:cardBackgroundColor="#00a6a2"
        android:layout_marginBottom="@dimen/_27sdp"
        app:cardCornerRadius="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/primary_green"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:text="@string/apply_filter"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
