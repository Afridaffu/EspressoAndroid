<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottomradius"
            android:orientation="vertical"
            android:paddingStart="@dimen/_21sdp"
            android:paddingTop="@dimen/_45sdp"
            android:paddingRight="@dimen/_21sdp"
            android:paddingBottom="@dimen/_16sdp">

            <ImageView
                android:id="@+id/closeBtnIV"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_21sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/payout_transactions"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_19sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/searchIconIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_9sdp"
                        android:src="@drawable/ic_search_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/payoutSearchET"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:autofillHints="AUTOFILL_HINT_SMS_OTP"
                            android:background="@android:color/transparent"
                            android:cursorVisible="true"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                            android:fontFamily="@font/opensans_regular"
                            android:hint="Payout ID"
                            android:imeOptions="actionDone"
                            android:maxLength="35"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/primary_black"
                            android:textColorHint="@color/dark_grey"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="@dimen/_10ssp" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_11sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:background="@color/dark_color_bg" />

                        <ImageView
                            android:id="@+id/filterIconIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_14sdp"
                            android:contentDescription="@string/filter_button"
                            android:src="@drawable/ic_filtericon" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/CynTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_21sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/cyn_under_payout"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_11ssp"
                android:visibility="gone" />
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/payoutRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedsV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_11sdp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/payoutListCV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:visibility="gone"
                            app:cardCornerRadius="@dimen/_10sdp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/payoutRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/_6sdp"
                                android:paddingTop="@dimen/_11sdp"
                                android:paddingEnd="@dimen/_6sdp">

                            </androidx.recyclerview.widget.RecyclerView>
                        </androidx.cardview.widget.CardView>

                        <ProgressBar
                            android:id="@+id/payoutProgressBarLoadMore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/payoutNoTransactions"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:text="You have no transactions"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/payoutLoadMoreTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:text="Load More"
                            android:textColor="@color/primary_green"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/payoutNoMoreTransactions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="You have no more transactions"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>
</LinearLayout>