<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WithdrawPaymentMethodsActivity">

    <include
        android:id="@+id/withdrawmethod"
        layout="@layout/selectwithdrawmethod"
        android:visibility="visible" />

    <include
        android:id="@+id/withdrawnotoken"
        layout="@layout/withdraw_no_token_available"
        android:visibility="gone" />

    <include
        android:id="@+id/addpayment"
        layout="@layout/activity_addpayment_method"
        android:visibility="gone" />

    <include
        android:id="@+id/withdrawpay"
        layout="@layout/withdraw_pay_method"
        android:visibility="gone" />

    <include
        android:id="@+id/externalBank"
        layout="@layout/activity_add_external_bank_acc"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>