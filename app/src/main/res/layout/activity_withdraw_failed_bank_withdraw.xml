<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.business.WithdrawFailedBankWithdrawActivity"
    android:orientation="vertical"
    android:background="@color/et_bg_gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgrndbtmcornrs"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lyPRClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_45sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:contentDescription="@string/buy_token"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginBottom="@dimen/_11sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/transaction_details"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_35sdp">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_11sdp"
                        android:paddingEnd="@dimen/_11sdp"
                        android:paddingBottom="@dimen/_21sdp">

                        <TextView
                            android:id="@+id/headerTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_21sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/failed_bank_withdraw"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/amountTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_bold"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_24ssp" />

                            <TextView
                                android:id="@+id/cyn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:fontFamily="@font/opensans_bold"
                                android:text="@string/cyn"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_11sdp"
                            android:background="@color/blue_light" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_11sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/status"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/payreqStatusTV"
                                android:layout_width="@dimen/_68sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:background="@drawable/fill_grn_color_smallradius"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center"
                                android:textColor="@color/active_green"
                                android:textSize="@dimen/_7ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/date_amp_time"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/dateTimeTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="right"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/reference_id"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <LinearLayout
                                android:id="@+id/lyAcAdd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/referIDTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:gravity="right"
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_11ssp" />

                                <ImageView
                                    android:layout_width="@dimen/_11sdp"
                                    android:layout_height="@dimen/_11sdp"
                                    android:layout_gravity="right|center"
                                    android:layout_marginLeft="@dimen/_6sdp"
                                    android:src="@drawable/ic_copy" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/faildReasonLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:orientation="vertical"
                            android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="@string/failed_reason"
                                    android:textColor="@color/xdark_gray"
                                    android:textSize="@dimen/_11ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="@string/add_the_reason_code_from_signature_bank"
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_11ssp"
                                    android:layout_marginTop="@dimen/_6sdp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ach_information"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:gravity="left"/>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_11sdp"
                        android:paddingEnd="@dimen/_11sdp"
                        android:paddingBottom="@dimen/_24sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/withdraw_id"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <LinearLayout
                                android:id="@+id/lyWithdrawId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/withdrawIdTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:gravity="right"
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_11ssp" />

                                <ImageView
                                    android:layout_width="@dimen/_11sdp"
                                    android:layout_height="@dimen/_11sdp"
                                    android:layout_gravity="right|center"
                                    android:layout_marginLeft="@dimen/_6sdp"
                                    android:src="@drawable/ic_copy" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/reference_id"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                                <TextView
                                    android:id="@+id/referenceIDTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:gravity="right"
                                    android:textColor="@color/primary_green"
                                    android:textSize="@dimen/_11ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/purchaseAmtLL"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/withdraw_amount"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/pFeeTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="right"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/payreqPfLL"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/processing_fee"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/feeTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="right"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/payreqTAmountLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="@string/total_amount"
                                    android:textColor="@color/xdark_gray"
                                    android:textSize="@dimen/_11ssp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="@string/withdraw_amount_processing_fee"
                                    android:textColor="@color/xdark_gray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/totalTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="right"
                                android:text=""
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>