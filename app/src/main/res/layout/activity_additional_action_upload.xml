<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.IdVeAdditionalActionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ssnCloseLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_45sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:src="@drawable/ic_close" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/idveriErrWithSSNLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/actRqrdSubmitCV"
            android:layout_below="@+id/ssnCloseLL"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:src="@drawable/ic_ssn_fail" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/add_ac"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

<!--            <TextView-->
<!--                android:id="@+id/adminMessageTV"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginHorizontal="@dimen/_21sdp"-->
<!--                android:layout_marginTop="@dimen/_16sdp"-->
<!--                android:fontFamily="@font/opensans_regular"-->
<!--                android:text="@string/act_rqrd_description"-->
<!--                android:textColor="@color/primary_black"-->
<!--                android:textSize="@dimen/_11ssp" />-->


            <LinearLayout
                android:id="@+id/clickBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_19sdp"
                android:background="@drawable/card_background"
                android:orientation="horizontal"
                android:visibility="gone">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_upload_id" />


                <TextView
                    android:id="@+id/idveriUpIdTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/contentuploadid"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/fileSelectedLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/idveriUpIdSuccessTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_17sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="@dimen/_18sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/opensans_regular"
                        android:lineSpacingExtra="@dimen/_6sdp"
                        android:singleLine="true"
                        android:text="@string/contentuploadidsuccess"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/idveriUpIdSuccessImg"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:src="@drawable/ic_complete"
                        android:visibility="visible" />


                </LinearLayout>


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adminMessageTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_21sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/act_rqrd_description"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_11ssp"
                        android:layout_marginBottom="@dimen/_19sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/at_gray"
                        android:fontFamily="@font/opensans_bold"
                        android:paddingStart="@dimen/_21sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_21sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="@string/documents_required"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_11ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_21sdp"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_21sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/please_upload_required_documents_below"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/adminMsgTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/please_click_the_upload_button_below_to_proceed"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_document_required"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_30sdp"
                        android:visibility="visible">

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/actRqrdSubmitCV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_21sdp"
            android:layout_marginBottom="@dimen/_47sdp"
            app:cardBackgroundColor="@color/inactive_color"
            app:cardCornerRadius="@dimen/_21sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/submit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>