<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/et_bg_gray"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:clickable="false"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Date"
        android:textColor="@color/primary_black"
        android:textSize="@dimen/text_size_14sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/layoutTopRadiusRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">
<LinearLayout
    android:id="@+id/topLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/messageTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11sdp"
            android:fontFamily="@font/opensans_semibold"
            android:text="Send funds from Alison L"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_11ssp" />


        <TextView
            android:id="@+id/amountTV"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_11sdp"
            android:fontFamily="@font/opensans_bold"
            android:singleLine="true"
            android:gravity="right"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />
</LinearLayout>


        <TextView
            android:id="@+id/statusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topLL"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/opensans_bold"
            android:paddingStart="@dimen/_20sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Pending"
            android:textColor="#FFA701"
            android:textSize="@dimen/_7ssp" />

        <!--            </androidx.cardview.widget.CardView>-->

        <TextView
            android:id="@+id/balTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLL"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="right"
            android:layout_toLeftOf="@id/balanceTV"
            android:fontFamily="@font/opensans_semibold"
            android:text="Balance "
            android:layout_weight="1"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/balanceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topLL"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_11sdp"
            android:layout_weight="1"

            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_10ssp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/_11sdp"
            android:layout_height="1dp"
            android:layout_below="@id/balanceTV"
            android:background="@color/white" />

        <View
            android:layout_width="@dimen/_10sdp"
            android:layout_height="1dp"
            android:layout_below="@id/balanceTV"
            android:layout_weight="1"

            android:background="@color/blue_light" />

        <View
            android:layout_width="@dimen/_11sdp"
            android:layout_height="1dp"
            android:layout_below="@id/balanceTV"
            android:background="@color/white" />
    </LinearLayout>
</LinearLayout>