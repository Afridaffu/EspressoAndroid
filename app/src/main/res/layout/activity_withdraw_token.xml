<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f4f5"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/headerLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/backgrndbtmcornrs"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_21sdp"
        android:paddingTop="@dimen/_40sdp"
        android:paddingRight="@dimen/_21sdp">

        <LinearLayout
            android:id="@+id/lyWithdrawClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_11sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="Withdraw Token"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lyBottom"
        android:layout_below="@+id/headerLL"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_21sdp"
                android:paddingRight="@dimen/_21sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Withdraw to"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_12ssp" />

                <RelativeLayout
                    android:id="@+id/lyPayMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imgBankIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_bankactive" />

                    <LinearLayout
                        android:id="@+id/lyCDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/imgArrow"
                        android:layout_toRightOf="@+id/imgBankIcon"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tvPayHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:singleLine="true"
                            android:text="Bank of America"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvAccNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:singleLine="true"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyBDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/imgArrow"
                        android:layout_toRightOf="@+id/imgBankIcon"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvBankName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/opensans_semibold"
                            android:singleLine="true"
                            android:text="Bank of America"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvBAccNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvLimit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lyCDetails"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/imgArrow"
                        android:layout_toRightOf="@+id/imgBankIcon"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/xdark_gray"
                        android:textSize="@dimen/_9ssp" />

                    <TextView
                        android:id="@+id/tvFeePer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvLimit"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/imgArrow"
                        android:layout_toRightOf="@+id/imgBankIcon"
                        android:fontFamily="@font/opensans_regular"
                        android:text=""
                        android:textColor="@color/xdark_gray"
                        android:textSize="@dimen/_9ssp"/>

                    <ImageView
                        android:id="@+id/imgArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_chevron_right" />
                </RelativeLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_197sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_32sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/payLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_13ssp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lyamountview1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginTop="@dimen/_6sdp"
                                android:fontFamily="@font/opensans_bold"
                                android:text="$ "
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_30ssp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/lyAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/etAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="creditCardSecurityCode"
                                    android:background="@color/white"
                                    android:clickable="false"
                                    android:cursorVisible="true"
                                    android:fontFamily="@font/opensans_bold"
                                    android:gravity="center_vertical|right"
                                    android:hint="0.00"
                                    android:inputType="numberDecimal"
                                    android:longClickable="false"
                                    android:maxLength="@string/maxlength"
                                    android:singleLine="true"
                                    android:textColor="@color/primary_black"
                                    android:textColorHint="@color/light_gray"
                                    android:textCursorDrawable="@drawable/cursorcolor"
                                    android:textDirection="rtl"
                                    android:textSize="@dimen/_53ssp" />

                                <TextView
                                    android:id="@+id/tvCYN"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_bold"
                                    android:text=" CYN"
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_12ssp"
                                    android:visibility="visible"/>

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imgConvert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginStart="@dimen/_10ssp"
                                android:layout_marginBottom="@dimen/_14ssp"
                                android:src="@drawable/ic_download" />

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="Amount entered exceeds your daily limit"
                        android:textColor="@color/error"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/lyBalance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Available Balance: "
                            android:textColor="@color/balance"
                            android:textSize="@dimen/_9ssp"/>

                        <TextView
                            android:id="@+id/tvAvailableBal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:textColor="@color/balance"
                            android:textSize="@dimen/_12ssp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text=" CYN"
                            android:textColor="@color/balance"
                            android:textSize="@dimen/_9ssp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="#d8e2f0" />

                    <TextView
                        android:id="@+id/etRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_19sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:hint="Optional: Add Note (Maximum 120 characters )"
                        android:textColor="@color/primary_black"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvExchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/opensans_regular"
                android:text="Exchange Rate: 1.00 CYN = $ 1.00"
                android:textColor="@color/xdark_gray"
                android:textSize="@dimen/_9ssp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lyBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <!--        <TextView-->
        <!--            android:id="@+id/tvExchange"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center_horizontal"-->
        <!--            android:fontFamily="@font/opensans_regular"-->
        <!--            android:text="Exchange Rate: 1.00 CYN = $ 1.00"-->
        <!--            android:textColor="@color/xdark_gray"-->
        <!--            android:textSize="@dimen/_9ssp"></TextView>-->

        <com.coyni.mapp.utils.keyboards.CustomKeyboard
            android:id="@+id/ckb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>