<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/websitehintdHolderLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/outline_box_unfocused"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Https://"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_12ssp"
                />

            <View
                android:layout_width="1.5dp"
                android:layout_height="wrap_content"
                android:background="@color/light_gray" />

        </LinearLayout>

        <EditText
            android:id="@+id/websiteET"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:fontFamily="@font/opensans_semibold"
            android:hint="Website"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:maxLength="100"
            android:padding="14dp"
            android:singleLine="true"
            android:textColor="@color/primary_black"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>

    <TextView
        android:id="@+id/websitehintTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:fontFamily="@font/opensans_semibold"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Website"
        android:textColor="@color/primary_black"
        android:textSize="@dimen/text_size_11sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/websitehintdHolderLL"
        app:layout_constraintStart_toStartOf="@+id/websitehintdHolderLL"
        app:layout_constraintTop_toTopOf="@+id/websitehintdHolderLL" />


    <LinearLayout
        android:id="@+id/websiteErrorLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/websitehintdHolderLL">

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/ic_erro" />

        <TextView
            android:id="@+id/websiteErrorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="Field Required"
            android:textColor="@color/error_red"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>