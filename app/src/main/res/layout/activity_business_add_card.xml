                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/b_zipErrorLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/b_etlName"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/ic_erro" />

                    <TextView
                        android:id="@+id/b_zipErrorTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/error_red"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/disable_bg" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:hint="Country"
                        android:textColorHint="@color/xdark_gray"
                        app:boxStrokeColor="@color/primary_green"
                        app:errorIconDrawable="@null"
                        app:expandedHintEnabled="false"
                        app:hintTextColor="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/b_etCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="creditCardSecurityCode"
                            android:enabled="false"
                            android:fontFamily="@font/opensans_semibold"
                            android:imeOptions="actionNext"
                            android:inputType="text|textNoSuggestions"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:padding="@dimen/_14sdp"
                            android:privateImeOptions="disableSticker=true;disableGifKeyboard=true"
                            android:singleLine="true"
                            android:text="United States"
                            android:textColor="@color/xdark_gray"
                            android:textColorHint="@color/light_gray"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/_12ssp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/b_cvAddCard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_43sdp"
                    android:layout_marginTop="@dimen/_43sdp"
                    android:gravity="center"
                    app:cardBackgroundColor="@color/inactive_color"
                    app:cardCornerRadius="@dimen/_22sdp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:text="Add Card"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

