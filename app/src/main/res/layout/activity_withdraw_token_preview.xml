<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context="com.coyni.android.view.WithdrawTokenPreviewActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status"
        app:elevation="0dp"
        app:theme="@style/Theme.QuickCard.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_sent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingEnd="72dp"
            app:popupTheme="@style/Theme.QuickCard.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Withdraw Tokens"
                    android:textColor="@color/white"
                    android:textSize="16sp"></TextView>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="156dp"
        android:layout_height="174dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-10dp"
        android:src="@drawable/ic_token_back"></ImageView>

    <View
        android:id="@+id/viewdiv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/appbar"
        android:layout_marginTop="20dp"></View>

    <RelativeLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewdiv"
        android:background="@drawable/transactionscorner">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnConfirm"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/tvHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/transpreview"
                    android:textColor="#009D98"
                    android:textSize="@dimen/text_size_18sp"></TextView>


                <TextView
                    android:id="@+id/tvAmtHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHead"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/youget"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_18sp"></TextView>

                <LinearLayout
                    android:id="@+id/layoutAmtValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAmtHead"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="48.00"
                        android:textColor="@color/smsotp"
                        android:textSize="@dimen/text_size_20sp"></TextView>

                    <TextView
                        android:id="@+id/tvType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:text=" CYN"
                        android:textColor="@color/smsotp"
                        android:textSize="@dimen/text_size_15sp"></TextView>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layoutBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/layoutPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/paymethod"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>

                        <TextView
                            android:id="@+id/tvBank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/tvCardNo"
                            android:fontFamily="@font/opensans_bold"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>

                        <TextView
                            android:id="@+id/tvCardNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/opensans_bold"
                            android:singleLine="true"
                            android:text=".... 3679"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_15sp"></TextView>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layoutFee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutPayment"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Processing Fee"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>

                        <TextView
                            android:id="@+id/tvProcessingFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="end"
                            android:singleLine="true"
                            android:text="2.00 CYN"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutFee"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Withdraw Amount"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>

                        <TextView
                            android:id="@+id/tvTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="end"
                            android:singleLine="true"
                            android:text="50.00 CYN"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>
                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/layoutTotal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="15dp"
                        android:background="#F3F3F3"></View>

                    <LinearLayout
                        android:id="@+id/layoutBalance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/estbal"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>

                        <TextView
                            android:id="@+id/tvBalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="end"
                            android:singleLine="true"
                            android:text="98.00 CYN"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutGift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/layoutEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Send to"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="john@mail.com"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutBrand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutEmail"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBrand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:singleLine="true"
                            android:text="For Amazon"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgBrand"
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/tvGiftAmount"
                                android:src="@drawable/ic_brand_small"></ImageView>

                            <TextView
                                android:id="@+id/tvGiftAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/opensans_bold"
                                android:text="50.00 USD"
                                android:textColor="@color/headcolor"
                                android:textSize="@dimen/text_size_14sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutBrand"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Processing Fee"
                        android:textColor="@color/headcolor"
                        android:textSize="@dimen/text_size_14sp"></TextView>

                    <TextView
                        android:id="@+id/tvGiftPrFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutBrand"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="2.00 CYN"
                        android:textColor="@color/headcolor"
                        android:textSize="@dimen/text_size_14sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvGiftPrFee"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Grand Total"
                        android:textColor="@color/headcolor"
                        android:textSize="@dimen/text_size_14sp"></TextView>

                    <TextView
                        android:id="@+id/tvGiftTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvGiftPrFee"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="52.00 CYN"
                        android:textColor="@color/headcolor"
                        android:textSize="@dimen/text_size_14sp"></TextView>

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/tvGiftTotal"
                        android:layout_marginTop="25dp"
                        android:background="#F3F3F3"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider1"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Remaining Balance"
                        android:textColor="@color/headcolor"
                        android:textSize="@dimen/text_size_14sp"></TextView>

                    <TextView
                        android:id="@+id/tvRemBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider1"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="0.00 GBT"
                        android:textColor="@color/headcolor"
                        android:textSize="@dimen/text_size_14sp"></TextView>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgShape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutBank"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_shape"></ImageView>
            </LinearLayout>
        </ScrollView>

        <in.shadowfax.proswipebutton.ProSwipeButton
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:arrow_color="#80858585"
            app:bg_color="@color/btnback"
            app:btn_text="Slide to confirm"
            app:text_color="@color/headcolor"
            app:text_size="@dimen/text_size_20sp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/viewdiv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="35dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_withdraw_trans"></ImageView>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/layoutProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_above="@+id/tvSending"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp">

            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                android:id="@+id/circular_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:direction="clockwise"
                app:progressBackgroundStrokeWidth="1dp"
                app:progressColor="#35BAB6"
                app:textColor="@color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_progress"></ImageView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvSending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/opensans_semibold"
            android:text="Processing Transaction"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_18sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSending"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Please Standby"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/text_size_14sp"></TextView>
    </RelativeLayout>
</RelativeLayout>