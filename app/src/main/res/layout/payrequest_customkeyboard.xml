<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prkeyOneTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/prkeyTwoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/prkeyThreeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prkeyFourTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/prkeyFiveTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/prkeySixTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prkeySevenTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/prkeyEightTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="8"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/prkeyNineTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="9"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#FDFDFD"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prkeyZeroTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/prkeyDotTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="@dimen/_7sdp"
                android:text="."
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:padding="@dimen/_7sdp">

                <ImageView
                    android:id="@+id/prbackActionIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_backspace"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>