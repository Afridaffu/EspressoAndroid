<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llapprovedreserved"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lladditionReserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_100sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_21sdp"
                android:paddingEnd="@dimen/_19sdp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imvCLose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_44sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:src="@drawable/ic_x" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Additional Action Required"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Thank you for your interest in coyni. After reviewing your account. The coyni team requires you to upload the following documentation within 30 days to continue account verification."
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_document_required"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/at_gray"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_21sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/documents_required"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/_11ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_21sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/please_upload_required_documents_below"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/website_revision_required"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/at_gray"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_21sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/website_revisions_required"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/_11ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_21sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_14sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/please_check_the_box_if_you_completed_a_task"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/information_revision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/at_gray"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_21sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/information_revisions"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/_11ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_11sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_11sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_11sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/please_accept_or_decline_the_revision_suggestion"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/topradius"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/submitCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_22sdp"
                android:layout_marginBottom="@dimen/_26sdp"
                app:cardBackgroundColor="@color/inactive_color"
                app:cardCornerRadius="@dimen/_33sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_13sdp"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>