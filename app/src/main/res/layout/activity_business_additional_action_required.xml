<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/additionalActionRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/llapprovedreserved"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lladditionReserve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_100sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_21sdp"
                android:paddingEnd="@dimen/_19sdp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imvCLose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_44sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:src="@drawable/ic_x" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Additional Action Required"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:id="@+id/adminMessageTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_document_required"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/at_gray"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_21sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/documents_required"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/_11ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_21sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/please_upload_required_documents_below"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/website_revision_required"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/at_gray"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_21sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/website_revisions_required"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/_11ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_21sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_14sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/please_check_the_box_if_you_completed_a_task"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bank_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/at_gray"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_21sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/bank_information"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/_11ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_14sdp"
                            android:background="@drawable/bg_light_border"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/editLL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_10sdp"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_8sdp"
                                        android:src="@drawable/ic_bankactive" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_6sdp"
                                            android:fontFamily="@font/opensans_regular"
                                            android:text="Name on Bank Account"
                                            android:textColor="@color/dark_grey"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/nameOnAccTV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:text="Jonathon Smith"
                                            android:textColor="@color/primary_black"
                                            android:textSize="@dimen/_11ssp" />


                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/editTextTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:layout_marginEnd="@dimen/_21sdp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="@string/edit_underline"
                                        android:textColor="@color/primary_green"
                                        android:textSize="@dimen/_11ssp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/routingNumLL"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_8sdp"
                                        android:src="@drawable/ic_bankactive"
                                        android:visibility="invisible" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:layout_weight="1"
                                        android:baselineAligned="false"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_6sdp"
                                            android:fontFamily="@font/opensans_regular"
                                            android:text="Routing Number"
                                            android:textColor="@color/dark_grey"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/routingNumTV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:text="123456789"
                                            android:textColor="@color/primary_black"
                                            android:textSize="@dimen/_11ssp" />


                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/editText1TV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:layout_marginEnd="@dimen/_21sdp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="Edit"
                                        android:textColor="@color/primary_green"
                                        android:textSize="@dimen/_9ssp"
                                        android:visibility="invisible" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/accountNumLL"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_12sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_8sdp"
                                        android:src="@drawable/ic_bankactive"
                                        android:visibility="invisible" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_3sdp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_6sdp"
                                            android:fontFamily="@font/opensans_regular"
                                            android:text="Account Number"
                                            android:textColor="@color/dark_grey"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/accNumberTV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:text="0001214124421"
                                            android:textColor="@color/primary_black"
                                            android:textSize="@dimen/_11ssp" />


                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/editText2TV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:layout_marginEnd="@dimen/_21sdp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="Edit"
                                        android:textColor="@color/primary_green"
                                        android:textSize="@dimen/_9ssp"
                                        android:visibility="invisible" />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/verificationFailLL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/_10sdp"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/_8sdp"
                                        android:src="@drawable/ic_bankactive" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_3sdp"
                                            android:layout_weight="1"
                                            android:orientation="horizontal"
                                            android:paddingTop="@dimen/_7sdp">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="@dimen/_6sdp"
                                                android:src="@drawable/ic_decline" />

                                            <TextView
                                                android:id="@+id/verifyFailedTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/opensans_semibold"
                                                android:text="Bank Verification Failed"
                                                android:textColor="@color/error"
                                                android:textSize="@dimen/_11ssp" />

                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_3sdp"
                                            android:layout_weight="1"
                                            android:orientation="vertical"
                                            android:paddingTop="@dimen/_7sdp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/opensans_regular"
                                                android:text="We couldnâ€™t verify your information due to "
                                                android:textColor="@color/primary_black"
                                                android:textSize="@dimen/_11ssp" />

                                            <TextView
                                                android:id="@+id/errorDescrptnTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/opensans_semibold"
                                                android:text="[error code description]."
                                                android:layout_marginTop="@dimen/_4sdp"
                                                android:textColor="@color/primary_black"
                                                android:textSize="@dimen/_11ssp"
                                                android:layout_marginBottom="@dimen/_15sdp"/>

                                            <TextView
                                                android:id="@+id/resubmitTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/please_resubmit_a_bank_account"
                                                android:textColor="@color/primary_green"
                                                android:textSize="@dimen/_11ssp"
                                                android:fontFamily="@font/opensans_regular"
                                                android:layout_marginBottom="@dimen/_15sdp"
                                                />

                                        </LinearLayout>


                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/information_revision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/at_gray"
                            android:fontFamily="@font/opensans_bold"
                            android:paddingStart="@dimen/_21sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_21sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/information_revisions"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/_11ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_11sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_11sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_11sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:text="@string/please_accept_or_decline_the_revision_suggestion"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/topradius"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/submitCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_22sdp"
                android:layout_marginBottom="@dimen/_26sdp"
                app:cardBackgroundColor="@color/inactive_color"
                app:cardCornerRadius="@dimen/_33sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_13sdp"
                    android:text="@string/submit"
                    android:clickable="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>