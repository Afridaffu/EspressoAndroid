<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EnableFaceID"
    android:padding="20dp"
    android:background="@color/white"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/bottomLL"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Face ID"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/primary_black"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="72dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By enabling Face ID, you are preventing unauthorized users from gaining access to your account and other sensitive information."
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/primary_black"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginBottom="40dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_face_id"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/enableFaceCV"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            app:cardBackgroundColor="@color/primary_color"
            app:cardCornerRadius="22dp"
            android:layout_marginBottom="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable"
                android:textSize="@dimen/text_size_12sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/opensans_bold"
                />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/faceIDNotNowTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Now"
            android:textSize="@dimen/text_size_12sp"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/primary_color"/>
    </LinearLayout>

</RelativeLayout>