<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_rounded_bg"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/_43sdp"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_13sdp"
        android:background="@drawable/shape_green_round_rect" />

    <LinearLayout
        android:id="@+id/profileview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ExpandableListView
            android:id="@+id/business_profile_accounts_expandable_list"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_marginBottom="@dimen/_15sdp"
            android:groupIndicator="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:background="#F6F9FE" />

        <LinearLayout
            android:id="@+id/profileLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_account_profile_image"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_10ssp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_18sdp"
                app:layout_constraintStart_toEndOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/businessProfileAccountItemChildImage"
                    android:scaleType="fitXY"
                    android:src="@color/light_gray"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/b_imageTextTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_20sdp"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/defualt_account_dialog_personal_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10ssp"
                android:fontFamily="@font/opensans_semibold"
                android:text=""
                android:layout_weight="1"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_11sdp" />

            <ImageView
                android:id="@+id/tickIcon"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/ic_custom_tick"
                app:tint="@color/primary_green" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:background="#F6F9FE" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/default_DoneBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_27sdp"
        android:gravity="center"
        app:cardBackgroundColor="@color/primary_green"
        app:cardCornerRadius="@dimen/_22sdp"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:text="Done"
            android:textColor="#fdfdfd"
            android:textSize="@dimen/_12ssp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>