<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/et_bg_gray"
    android:orientation="vertical"
    tools:context=".view.business.TransactionsPayoutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomradius"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/backLL"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_45sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_11sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/payout_details"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_94sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/payoutIdTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_21sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/payout_id"
                        android:textAlignment="center"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/idTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/id"
                        android:textAlignment="center"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/cynNoTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="@string/cyn_no_6435_21"
                        android:textAlignment="center"
                        android:textColor="@color/active_green"
                        android:textSize="@dimen/_16ssp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/blue_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_11sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/status"
                            android:layout_weight="1"
                            android:textColor="@color/xdark_gray"
                            android:textSize="@dimen/_11ssp" />


                        <TextView
                            android:layout_width="@dimen/_68sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:background="@drawable/txn_completed_bg"
                            android:fontFamily="@font/opensans_bold"
                            android:text="Paid"
                            android:gravity="center"
                            android:textColor="@color/active_green"
                            android:textSize="@dimen/_7sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_11sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/payout_date"
                            android:textColor="@color/xdark_gray"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/dateTimeTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/date_time"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_11sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/payout_reference_id"
                            android:textColor="@color/xdark_gray"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/sndnoTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/snd_no"
                            android:textColor="@color/primary_green"
                            android:textSize="@dimen/_11ssp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_11sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:contentDescription="@string/reserve_id"
                            android:src="@drawable/ic_copy_active" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_11sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/to_token_account"
                            android:textColor="@color/xdark_gray"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/tokenIdTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/as28027281"
                            android:textColor="@color/primary_green"
                            android:textSize="@dimen/_11ssp" />

                        <ImageView
                            android:id="@id/tokenIdTV"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_11sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:src="@drawable/ic_copy_active" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_11sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/reserve_id"
                            android:textColor="@color/xdark_gray"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:id="@+id/ReserveIdTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/_78dfbwaebfih"
                            android:textColor="@color/primary_green"
                            android:textSize="@dimen/_11ssp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_11sdp"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:contentDescription="@string/reserve_id"
                            android:src="@drawable/ic_copy_active" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/recent_transactions"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginRight="@dimen/_21sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/cyn"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_9ssp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>