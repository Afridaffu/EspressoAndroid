<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F5"
    android:paddingBottom="@dimen/_20sdp">

    <LinearLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomradius"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_21sdp"
        android:paddingBottom="@dimen/_15sdp">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_45sdp"
            android:src="@drawable/ic_close"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="My QR code"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutHead"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvQRcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_37sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfile"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_centerHorizontal="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_30sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvUserInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans_semibold"
                                android:text=""
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/text_size_20sp"></TextView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvProfilePic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:visibility="gone"
                                app:cardCornerRadius="30dp">

                                <ImageView
                                    android:id="@+id/imgProfile"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:visibility="visible"></ImageView>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cvProfile"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="Jonathan Joestar"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_14ssp"></TextView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvName"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_26sdp"
                        android:background="@drawable/ic_qr_img_outline">

                        <ImageView
                            android:id="@+id/idIVQrcode"
                            android:layout_width="210dp"
                            android:layout_height="210dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/qr_code" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvQRcode"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_11sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Recipient’s Address"
                        android:textColor="@color/xdark_gray"
                        android:textSize="@dimen/_11ssp"></TextView>

                    <TextView
                        android:id="@+id/tvWalletAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="f4184fc596403b9d6…"
                        android:textColor="#404040"
                        android:textSize="@dimen/_10ssp"></TextView>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvWalletAddress"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@color/at_gray"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:paddingLeft="@dimen/_40sdp"
                        android:paddingRight="@dimen/_35sdp">

                        <ImageView
                            android:id="@+id/imgCopy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_copy"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgCopy"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Copy"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_11ssp"></TextView>

                        <ImageView
                            android:id="@+id/imgShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_share"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgShare"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Share"

                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_11ssp"></TextView>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>