<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.business.BenificialOwnerDetails"
    android:background="@color/et_bg_gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomradius"
        android:paddingLeft="@dimen/_21sdp"
        android:paddingTop="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_44sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/opensans_semibold"
            android:text="Beneficial Owners"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_11ssp" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jonathan Joestar"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginBottom="@dimen/_2sdp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primary Owner"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_icon_awesome_star"
                    />
            </LinearLayout>
<!--            <ImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/owneship_percent"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginBottom="@dimen/_21sdp"-->
<!--                />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                >

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="180dp"
                    android:layout_height="130dp"
                    android:layout_centerInParent="true"
                    android:progress="10"
                    android:progressDrawable="@drawable/progressbar_bg1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_gravity="center"
                        android:text="25%"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_18ssp" />

                    <TextView
                        android:id="@+id/tx_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/percentage"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Ownership"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:fontFamily="@font/opensans_bold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/primary_black"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_11sdp"
            android:paddingEnd="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/xdark_gray"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="August 23, 1991"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/primary_black"
                android:layout_marginBottom="@dimen/_7sdp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray"
                android:layout_marginBottom="@dimen/_9sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mailing Address"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/xdark_gray"
                android:layout_marginBottom="@dimen/_1sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3131 Camino Del Rio, San Diego,\nCA, 92108"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/primary_black"
                android:layout_marginBottom="@dimen/_7sdp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray"
                android:layout_marginBottom="@dimen/_9sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSN"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/xdark_gray"
                android:layout_marginBottom="@dimen/_1sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•••-••-••23"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/primary_black"
                android:layout_marginBottom="@dimen/_7sdp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray"
                android:layout_marginBottom="@dimen/_17sdp"
                />







        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>