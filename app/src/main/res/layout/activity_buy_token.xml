<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context="com.coyni.android.view.BuyTokenActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status"
        app:elevation="0dp"
        app:theme="@style/Theme.QuickCard.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_sent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingEnd="72dp"
            app:popupTheme="@style/Theme.QuickCard.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Buy Token"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16sp"></TextView>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="156dp"
        android:layout_height="174dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-10dp"
        android:src="@drawable/ic_token_back"></ImageView>

    <View
        android:id="@+id/viewdiv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/appbar"
        android:layout_marginTop="20dp"></View>

    <RelativeLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewdiv"
        android:background="@drawable/transactionscorner"
        android:paddingTop="20dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/layoutMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="50dp">

                <TextView
                    android:id="@+id/tvHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Your daily or weekly limit is { Amount }"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_14sp"></TextView>

                <RelativeLayout
                    android:id="@+id/layoutPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvHead"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etlPay"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:hint="You Pay"
                        android:textColorHint="@color/hintcolor"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@color/status"
                        app:errorEnabled="false"
                        app:hintTextAppearance="@style/HintLabel"
                        app:hintTextColor="@color/status">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/opensans_bold"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:maxLength="10"
                            android:padding="11dp"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_20sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="USD"
                        android:textColor="@color/headcolor"
                        android:textSize="@dimen/text_size_12sp"></TextView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvExchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutPay"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/exchange"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_12sp"></TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvExchange"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/layoutInfo"
                    android:visibility="gone"
                    app:cardBackgroundColor="#ADADAD"
                    app:cardCornerRadius="9dp">

                    <TextView
                        android:id="@+id/tvPFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:text="Processing fee is applicable for this transaction."
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11sp"></TextView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/layoutInfo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tvExchange"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_rounded_info"></ImageView>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layoutGet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutInfo"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etlGet"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:hint="You Get"
                        android:textColorHint="@color/hintcolor"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@color/status"
                        app:errorEnabled="false"
                        app:hintTextAppearance="@style/HintLabel"
                        app:hintTextColor="@color/status">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etGet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:enabled="false"
                            android:fontFamily="@font/opensans_bold"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:padding="11dp"
                            android:text=" "
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_20sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvGet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/opensans_bold"
                        android:text="@string/currency"
                        android:textColor="@color/headcolor"
                        android:textSize="@dimen/text_size_12sp"></TextView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/layoutGet"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="-20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingTop="20dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="30dp">

                        <!--                    <ScrollView-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:fillViewport="true"-->
                        <!--                        android:overScrollMode="never"-->
                        <!--                        android:scrollbars="none">-->

                        <!--                        <LinearLayout-->
                        <!--                            android:id="@+id/layoutCards"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:orientation="vertical">-->

                        <RelativeLayout
                            android:id="@+id/layoutCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tvDebitHead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Pay with Debit / Credit Cards"
                                android:textColor="@color/headcolor"
                                android:textSize="@dimen/text_size_14sp"></TextView>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvCards"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvDebitHead"
                                android:layout_marginTop="20dp"
                                android:divider="@null"
                                android:nestedScrollingEnabled="true"
                                android:overScrollMode="never"
                                android:scrollbars="none" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvAdd"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_below="@+id/rvCards"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginBottom="20dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_buy_add"></ImageView>

                                    <TextView
                                        android:id="@+id/tvAdd"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="Add New Card"
                                        android:textColor="@color/status"
                                        android:textSize="@dimen/text_size_16sp"></TextView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layoutBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvBHead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Payment with Bank Account"
                                android:textColor="@color/headcolor"
                                android:textSize="@dimen/text_size_14sp"></TextView>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvBank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvBHead"
                                android:layout_marginTop="20dp"
                                android:divider="@null"
                                android:nestedScrollingEnabled="true"
                                android:overScrollMode="never"
                                android:scrollbars="none" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvAddBank"
                                android:layout_width="match_parent"
                                android:layout_height="62dp"
                                android:layout_below="@+id/rvBank"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginBottom="1dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_buy_add"></ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="Add New Bank"
                                        android:textColor="@color/status"
                                        android:textSize="@dimen/text_size_16sp"></TextView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                        <!--                        </LinearLayout>-->
                        <!--                    </ScrollView>-->

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layoutBuy"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:background="@color/btnback"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                android:text="Buy Now"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_20sp"></TextView>
        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/viewdiv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="35dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_buyt_trans"></ImageView>

    </androidx.cardview.widget.CardView>
</RelativeLayout>