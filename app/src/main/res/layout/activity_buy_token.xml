<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_21sdp"
        android:paddingRight="@dimen/_21sdp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:src="@drawable/ic_x"
            android:background="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_32sdp"
            android:text="Buy Token"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/opensans_bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:text="Payment Method"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/opensans_semibold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic__01_bank" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Bank of America"
                android:fontFamily="@font/opensans_semibold"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="••••5359"
                android:fontFamily="@font/opensans_semibold"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/ic_chevron_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_67sdp"
                android:gravity="center"
                android:text="$"
                android:paddingTop="@dimen/_9sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_40ssp"
                android:fontFamily="@font/opensans_bold"
                android:paddingBottom="@dimen/_7sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.00"
                android:textColor="#c5c5c5"
                android:textSize="@dimen/_53ssp"
                android:fontFamily="@font/opensans_bold"
                />
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_42sdp"
                android:background="@color/light_gray"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"

                />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:src="@drawable/ic_download" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:background="#d8e2f0"
                />
        </LinearLayout>

    </LinearLayout>


    <com.greenbox.coyni.utils.keyboards.CustomKeyboard
        android:id="@+id/ckb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_123sdp"/>
</LinearLayout>