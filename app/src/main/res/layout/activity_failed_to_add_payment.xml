<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_35sdp"
        android:src="@drawable/ic_failed" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:text="Failed to Add Payment "
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeading"
        android:layout_marginTop="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_17sdp"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:text="Thank you for your interest coyni. However, we regret to inform you that your account has been deactivated."
        android:textColor="@color/primary_black"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/tvHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMessage"
        android:layout_marginBottom="@dimen/_6sdp"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:text="Need Help?"
        android:textColor="@color/primary_black"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/tvContactUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHelp"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="center"
        android:text="@string/contact_us"
        android:textColor="@color/primary_green"
        android:textSize="@dimen/_12ssp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cvExit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        app:cardBackgroundColor="@color/primary_green"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:text="Exit"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>