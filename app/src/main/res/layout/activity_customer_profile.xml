<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF6FD"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
    tools:context=".view.CustomerProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/cpProfileLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bottomradius"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/cardviewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_164sdp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_backgound_top_customer_profile"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/_14sdp">

                        <ImageView
                            android:id="@+id/cpbackBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_21sdp"
                            android:layout_marginTop="@dimen/_45sdp"
                            android:src="@drawable/ic_back" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/customerDatailsLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="@dimen/_11sdp"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/_21sdp"
                                    android:weightSum="2">

                                    <TextView
                                        android:id="@+id/customerNameTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/opensans_bold"
                                        android:text="@string/cu_profile_name"
                                        android:textColor="@color/primary_black"
                                        android:textSize="@dimen/_14ssp" />

                                    <TextView
                                        android:id="@+id/cpAccountIDTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_6sdp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="@string/accountid"
                                        android:textColor="#767676"
                                        android:textSize="@dimen/_10ssp"

                                        />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/cpAccountStatusTV"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_6sdp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:text="@string/status_unverified"
                                            android:textColor="@color/primary_black"
                                            android:textSize="@dimen/_11ssp"

                                            />

                                        <TextView
                                            android:id="@+id/cpStatusTV"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginTop="@dimen/_6sdp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:text="@string/unveri"
                                            android:textColor="#FFA70F"
                                            android:textSize="@dimen/_11ssp" />

                                        <androidx.cardview.widget.CardView
                                            android:layout_width="@dimen/_7sdp"
                                            android:layout_height="@dimen/_7sdp"
                                            android:layout_marginStart="@dimen/_2sdp"
                                            android:layout_marginTop="7dp"
                                            app:cardBackgroundColor="#FFA70F"
                                            app:cardCornerRadius="3.5dp" />
                                    </LinearLayout>


                                </LinearLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="249dp"

                                    android:layout_marginTop="0dp">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/linearLayout"
                                        android:layout_width="@dimen/_49sdp"
                                        android:layout_height="@dimen/_49sdp"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/corecircle"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">


                                        <androidx.cardview.widget.CardView
                                            android:layout_width="@dimen/_47sdp"
                                            android:layout_height="@dimen/_47sdp"
                                            android:layout_alignParentRight="true"
                                            android:layout_gravity="center"
                                            app:cardBackgroundColor="@color/white"
                                            app:cardCornerRadius="@dimen/_24sdp"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">


                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:src="@color/primary_black" />
                                        </androidx.cardview.widget.CardView>


                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <ImageView
                                        android:id="@+id/imgQRCode"
                                        android:layout_width="@dimen/_23sdp"
                                        android:layout_height="@dimen/_23sdp"
                                        android:src="@drawable/ic_qr_code"
                                        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                                        app:layout_constraintEnd_toEndOf="@+id/linearLayout" />

                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewYourAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewProfile"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                android:background="@color/white"
                android:visibility="gone"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    android:paddingTop="27dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/cp_almost"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/text_size_12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/cp_setup"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/text_size_11sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/cp_getstarted"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/text_size_11sp" />

                            <ImageView
                                android:id="@+id/arrowIconIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/ic_arrowicon" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:id="@+id/spAccountImage"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_marginStart="17dp"
                        android:background="@drawable/ic_customerprofile" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/settingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewYourAccount"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/setting"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewYourAccount"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:orientation="vertical"

                    android:paddingStart="@dimen/_11sdp"
                    android:paddingTop="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_11sdp">

                    <LinearLayout
                        android:id="@+id/cpUserDetailsLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_16sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/setting_userdetails"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/ic_rightarrow" />

                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/viewcolor" />

                    <LinearLayout
                        android:id="@+id/cpPaymentMethodsLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_16sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/setting_payment"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_rightarrow" />

                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/viewcolor" />

                    <LinearLayout
                        android:id="@+id/cpPreferencesLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_16sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/setting_pref"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_rightarrow" />

                        </RelativeLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/_22sdp"
                        android:background="@color/viewcolor" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/accountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewYourAccount"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/account"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewfourth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewSetting"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:orientation="vertical"

                    android:paddingStart="@dimen/_11sdp"
                    android:paddingTop="@dimen/_11sdp">

                    <LinearLayout
                        android:id="@+id/cpAccountLimitsLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_16sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/account_limits"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_rightarrow" />

                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/viewcolor" />

                    <LinearLayout
                        android:id="@+id/cpAgreementsLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_16sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/account_agree"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_rightarrow" />

                        </RelativeLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/_21sdp"
                        android:background="@color/viewcolor" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/securityTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewSetting"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/security"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardviewSetting"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_11sdp"
                    android:paddingTop="@dimen/_11sdp">

                    <LinearLayout
                        android:id="@+id/cpResetPin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_16sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/security_resetpin"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_rightarrow" />

                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/viewcolor" />

                    <LinearLayout
                        android:id="@+id/cpFaceIdSetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="170dp"
                                android:fontFamily="@font/opensans_semibold"
                                android:paddingTop="@dimen/_16sdp"
                                android:paddingBottom="@dimen/_16sdp"
                                android:text="@string/security_faceid"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_12sdp" />

                            <com.github.angads25.toggle.widget.LabeledSwitch
                                android:id="@+id/switchbtn"
                                android:layout_width="@dimen/_55sdp"
                                android:layout_height="@dimen/_26sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/_11sdp"
                                android:layout_marginBottom="@dimen/_11sdp"
                                android:textSize="@dimen/text_size_11sp"
                                app:colorBorder="@color/primary_color"
                                app:colorOn="@color/primary_color"
                                app:textOff="Off"
                                app:textOn="On" />


                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/viewcolor" />

                    <LinearLayout
                        android:id="@+id/cpChangePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_16sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/security_changepass"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_rightarrow" />

                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/_21sdp"
                        android:background="@color/viewcolor" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_36sdp"
                android:layout_marginEnd="@dimen/_21sdp"
                android:layout_marginBottom="28dp"
                app:cardCornerRadius="21dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_bold"
                    android:paddingTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_13sdp"
                    android:text="Log Out"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/_12ssp" />


            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/viewSetupFaceBottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@color/primary_color"
                android:visibility="gone" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>