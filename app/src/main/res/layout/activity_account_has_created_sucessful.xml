<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.business.AccountHasCreatedSucessful"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_21sdp"
        android:paddingRight="@dimen/_21sdp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_x"
            android:layout_marginTop="@dimen/_42sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_success_icon"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_33sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your bank account has been successfully authorized and added to your merchant \napplication."
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginBottom="@dimen/_44sdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic__01_bank"
                android:paddingTop="@dimen/_19sdp"
                android:paddingLeft="@dimen/_11sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingBottom="@dimen/_21sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_black"
                    android:text="Bank of America"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/opensans_bold"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_black"
                android:layout_marginLeft="@dimen/_6sdp"
                android:text="••••5359"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/opensans_bold"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/viewcolor"
            android:layout_marginBottom="@dimen/_3sdp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic__01_bank"
            android:paddingTop="@dimen/_19sdp"
            android:paddingLeft="@dimen/_11sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingBottom="@dimen/_21sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_black"
            android:text="Wells Fargo"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/opensans_bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_black"
            android:layout_marginLeft="@dimen/_6sdp"
            android:text="••••8429"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/opensans_bold"
            />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/viewcolor"
        android:layout_marginBottom="@dimen/_3sdp"
        />
        <androidx.cardview.widget.CardView
            android:id="@+id/Cardnextcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/primary_color"
            app:cardCornerRadius="@dimen/_33sdp"
            android:layout_marginTop="@dimen/_85sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:paddingTop="@dimen/_13sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saved automatically"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_39sdp"
            />

    </LinearLayout>
</ScrollView>
</LinearLayout>