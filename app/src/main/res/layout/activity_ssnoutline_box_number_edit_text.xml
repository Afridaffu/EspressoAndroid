<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ssnhintdHolderLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/outline_box_unfocused"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/weightRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:orientation="vertical">

            <View
                android:id="@+id/anchorView"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <LinearLayout
                android:id="@+id/ssnDDLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/ssnType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="SSN"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/dropdownIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_down" />

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@color/light_gray" />
            </LinearLayout>

        </LinearLayout>

        <com.coyni.mapp.utils.MaskEditText.widget.MaskEditText
            android:id="@+id/ssnET"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:autofillHints="AUTOFILL_HINT_SMS_OTP"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:fontFamily="@font/opensans_semibold"
            android:hint="•••-••-••••"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:importantForAutofill="noExcludeDescendants"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/primary_black"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/_12ssp"
            app:mask="___-__-____" />

        <com.coyni.mapp.utils.MaskEditText.widget.MaskEditText
            android:id="@+id/einET"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:autofillHints="AUTOFILL_HINT_SMS_OTP"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:fontFamily="@font/opensans_semibold"
            android:hint="••-•••••••"
            android:imeOptions="actionDone"
            android:importantForAutofill="noExcludeDescendants"
            android:inputType="number"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/primary_black"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/_12ssp"
            android:visibility="gone"
            app:mask="__-_______" />

        <ImageView
            android:id="@+id/viewSSNIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/ic_eyeclose"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp" />
    </LinearLayout>
</LinearLayout>