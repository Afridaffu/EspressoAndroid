<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_core"
    android:padding="@dimen/_11sdp">

    <View
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_2sdp"
        android:background="@color/primary_color"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_28sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_16sdp"
        android:text="Order Preview"
        android:gravity="center"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_7sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="159.40"
        android:gravity="right"
        android:textSize="@dimen/_35ssp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="@color/primary_color"
        android:layout_marginLeft="@dimen/_78sdp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CYN"
            android:fontFamily="@font/opensans_bold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/primary_color"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_21sdp"
        android:padding="@dimen/_10sdp"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:fontFamily="@font/opensans_regular"
            android:textSize="@dimen/_11ssp"
            android:layout_weight="1"
            android:textColor="@color/xdark_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank of America ••••5359"
            android:layout_marginLeft="@dimen/_30sdp"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/primary_black"
            />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase Amount"
            android:fontFamily="@font/opensans_regular"
            android:textSize="@dimen/_11ssp"
            android:layout_weight="1"
            android:textColor="@color/xdark_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="159.40 USD"
            android:fontFamily="@font/opensans_semibold"
            android:layout_marginLeft="@dimen/_96sdp"
            android:textColor="@color/primary_black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processing Fee"
            android:fontFamily="@font/opensans_regular"
            android:textSize="@dimen/_11ssp"
            android:layout_weight="1"
            android:textColor="@color/xdark_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.60 USD"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="@dimen/_11ssp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/primary_black"
            android:layout_marginLeft="@dimen/_124sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_71sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total "
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/primary_black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"
            android:text="160.00 USD"
            android:textColor="@color/primary_color"
            android:gravity="right"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginLeft="@dimen/_145sdp"
            />
    </LinearLayout>



    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:id="@+id/lay_lock_main"
        android:layout_margin="20dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_round_rectable"
        app:layoutDescription="@xml/activity_swipe_unloack_scene"
        >

        <TextView
            android:id="@+id/tv_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="Slide to Confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/opensans_bold"
            app:layout_constraintBottom_toBottomOf="@id/im_lock"
            app:layout_constraintStart_toEndOf="@+id/im_lock"
            app:layout_constraintTop_toTopOf="@+id/im_lock" />


        <androidx.cardview.widget.CardView
            android:id="@+id/im_lock"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/primary_color"
            app:cardCornerRadius="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_double_left"
                />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/im_lock_"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="@dimen/_20sdp"
            android:visibility="invisible">

            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/primary_color"
                />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.motion.widget.MotionLayout>



</LinearLayout>