<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="32dp"
    android:background="@color/white"
    android:paddingLeft="32dp"
    tools:context=".view.RetrieveEmailActivity"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_marginTop="67dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/retrievemail"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_marginTop="20.67dp"
        android:fontFamily="@font/opensans_bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/retrieveemailcontent"
        android:fontFamily="@font/opensans_regular"
        android:textSize="17sp"
        android:layout_marginTop="21dp"
        android:textColor="@color/primary_black"
        />
    <com.greenbox.coyni.utils.outline_et.OutLineBoxPhoneNumberEditText
        android:id="@+id/rePhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reFirstNameTIL"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:hint="@string/firstName"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10sp"
        app:boxCornerRadiusTopStart="10sp"
        app:boxStrokeColor="@color/primary_color"
        app:expandedHintEnabled="false"
        app:hintTextColor="@color/primary_green">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reFirstNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:hint="@string/firstName"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="30"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reLastNameTIL"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:hint="@string/lastName"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10sp"
        app:boxCornerRadiusTopStart="10sp"
        app:boxStrokeColor="@color/primary_color"
        app:expandedHintEnabled="false"
        app:hintTextColor="@color/primary_green">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reLastNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:hint="@string/lastName"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="30"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reCardViewNextBtn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="103dp"
        app:cardBackgroundColor="@color/primary_color"
        app:cardCornerRadius="32dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/opensans_bold"
            />

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>