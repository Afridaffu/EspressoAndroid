<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundeddialog"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_green_round_rect" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutMessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_message_radius">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etlMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:counterEnabled="false"
            app:counterMaxLength="120"
            app:counterTextColor="@color/primary_black"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/addNoteET"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:autofillHints="creditCardSecurityCode"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                android:fontFamily="@font/opensans_regular"
                android:gravity="top"
                android:hint="Enter the reason of decline here.(Maximum 120 characters)"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine|textCapSentences"
                android:lineSpacingExtra="3dp"
                android:maxLength="120"
                android:padding="15dp"
                android:privateImeOptions="disableSticker=true;disableGifKeyboard=true"
                android:text=""
                android:cursorVisible="true"
                android:textColor="@color/primary_black"
                android:textColorHint="@color/text_grey_msg"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textIsSelectable="false"
                android:textSize="@dimen/_11ssp" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_21sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:layout_weight="1"
            android:background="@drawable/shape_green_round_rect_core"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/doneBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/inactive_color"
            app:cardCornerRadius="@dimen/_21sdp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>