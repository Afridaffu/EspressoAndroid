<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.business.DefaultAccountDialogActivity"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:id="@+id/profileviewLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">
        <View
            android:layout_width="@dimen/_43sdp"
            android:layout_height="2dp"
            android:background="@drawable/shape_green_round_rect"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_28sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_3sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/_11sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile"
                    android:contentDescription=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/greenboxpos"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/primary_black"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_down" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileviewLL"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Jonathan Joestar"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/opennewacLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileLL"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Open New Account"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/doneRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/opennewacLL"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvDone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_21sdp"
            android:layout_marginBottom="@dimen/_27sdp"
            android:gravity="center"
            app:cardBackgroundColor="@color/primary_green"
            app:cardCornerRadius="@dimen/_22sdp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Save"
                android:textColor="#fdfdfd"
                android:textSize="@dimen/_12ssp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>