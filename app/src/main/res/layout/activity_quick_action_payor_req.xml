<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.business.QuickActionPayorReqActivity"
    android:orientation="vertical"
    android:background="@drawable/top_rounded_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_3sdp"
                android:background="@drawable/bg_core_colorfill"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_36sdp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paying_dba_name"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/opensans_semibold"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"/>
        <ImageView
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:contentDescription="@string/done"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="@string/zara"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/primary_black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retail"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/opensans_semibold"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_address_hsdj89378"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/opensans_semibold"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_16sdp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/blue_light"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160.00"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/_35ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cyn"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/primary_green"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:src="@drawable/ic_exchange_range"
                android:contentDescription="@string/done"
                android:visibility="visible"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/blue_light"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginHorizontal="@dimen/_11sdp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paying_method"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/dark_grey"
                android:singleLine="true"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginEnd="@dimen/_11sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/business_token_account"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/primary_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/available_balance"
                        android:textSize="@dimen/_9ssp"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/opensans_semibold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_21sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipient_s_address"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/dark_grey"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hgj34239274"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/opensans_semibold"/>
            <ImageView
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:contentDescription="@string/cyn"
                android:layout_marginTop="@dimen/_2sdp"
                android:src="@drawable/ic_copy"/>

        </LinearLayout>

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/slideToConfirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_37sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_21sdp"
            android:background="@drawable/shape_round_rectable"
            android:elevation="@dimen/_2sdp"
            app:layoutDescription="@xml/activity_swipe_unloack_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingEnd="16dp"
                android:text="@string/slide_to_confirm"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/im_lock"
                app:layout_constraintStart_toEndOf="@+id/im_lock"
                app:layout_constraintTop_toTopOf="@+id/im_lock" />
            <androidx.cardview.widget.CardView
                android:id="@+id/im_lock"
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                app:cardBackgroundColor="@color/slidebtn_bg"
                app:cardCornerRadius="@dimen/_22sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_double_left" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/im_lock_"
                android:layout_width="@dimen/_44sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_22sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ProgressBar
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.motion.widget.MotionLayout>
    </LinearLayout>
</LinearLayout>