<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_account_profile_image"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_30sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/businessProfileAccountItemChildImage"
            android:scaleType="fitXY"
            android:src="@color/light_gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/b_imageTextTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_20sdp"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:text=""
        android:fontFamily="@font/opensans_semibold"
        android:textColor="@color/primary_black"
        android:textSize="@dimen/_16sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_35sdp"
        app:layout_constraintStart_toEndOf="@id/profile_account_profile_image"
        app:layout_constraintBottom_toBottomOf="@id/profile_account_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_account_profile_image"/>


    <LinearLayout
        android:id="@+id/statusLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/profile_account_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="@dimen/_35sdp"
        app:layout_constraintTop_toTopOf="@id/profile_account_profile_image"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@drawable/txn_pending_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/statusTV"
            android:layout_width="@dimen/_68sdp"
            android:layout_height="@dimen/_14sdp"
            android:fontFamily="@font/opensans_bold"
            android:text=""
            android:gravity="center"
            android:textColor="#FFA701"
            android:textSize="@dimen/_7ssp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/tickIcon"
        app:layout_constraintStart_toEndOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/profile_account_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/profile_account_profile_image"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_custom_tick"
        app:tint="@color/primary_green" />


</androidx.constraintlayout.widget.ConstraintLayout>