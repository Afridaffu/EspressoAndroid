<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_child_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_account_profile_image"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_18sdp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/businessProfileAccountItemChildImage"
                android:scaleType="fitXY"
                android:src="@drawable/acct_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/b_imageTextTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_20sdp"
                android:visibility="gone" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/statusTV"
            android:layout_width="@dimen/_68sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/txn_pending_bg"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:text=""
            android:layout_marginEnd="@dimen/_14sdp"
            android:textColor="@color/orange_status"
            android:visibility="gone"
            android:textSize="@dimen/_7ssp" />

        <ImageView
            android:id="@+id/tickIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:layout_marginEnd="@dimen/_16sdp"
            android:src="@drawable/ic_custom_tick"
            android:visibility="gone"
            app:tint="@color/primary_green" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="#E8E8E8"/>

    <LinearLayout
        android:id="@+id/ll_add_dba"
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle" />

            <TextView
                android:id="@+id/addDbaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Add DBA "
                android:textColor="@drawable/dba_text_enable_disable"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>