<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context=".fragments.AddNoteBottomSheet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_green_round_rect" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_21sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        >
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idveriSSNTIL"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_95sdp"
        android:textColorHint="@color/black"
        app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
        app:boxCornerRadiusBottomStart="@dimen/_10sdp"
        app:boxCornerRadiusTopEnd="@dimen/_10sdp"
        app:boxCornerRadiusTopStart="@dimen/_10sdp"
        app:boxStrokeColor="@color/primary_color"
        android:background="@color/et_bg_gray"
        app:expandedHintEnabled="false"
        app:counterMaxLength="120"
        android:layout_gravity="top"
        app:hintTextColor="@color/primary_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idVeriSSNET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:fontFamily="@font/opensans_bold"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:gravity="top"
            android:hint="Optional: Add Note (Maximum 120 characters)"
            android:padding="@dimen/_14sdp"
            android:textColor="@color/primary_black"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/_9sdp" />

    </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/cancelBtn"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_43sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/shape_green_round_rect_core"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/doneBtn"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_43sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        app:cardBackgroundColor="@color/primary_color"
        app:cardCornerRadius="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_21sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/opensans_bold"
            />
    </androidx.cardview.widget.CardView>




    </RelativeLayout>
</LinearLayout>