<?xml version="1.0" encoding="UTF-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".view.GiftCardBindingLayoutActivity">

    <include
        android:id="@+id/inProgressContainer"
        layout="@layout/activity_withdraw_gift_card_in_progress"
        android:visibility="visible" />

    <include
        android:id="@+id/failedContainer"
        layout="@layout/buy_token_transaction_failed"
        android:visibility="gone" />

    <include
        android:id="@+id/wdInProgressContainer"
        layout="@layout/withdraw_token_trans_inprogress"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>