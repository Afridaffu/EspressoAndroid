<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundeddialog"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/_43sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_23sdp"
        android:background="@drawable/bg_core_colorfill" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:orientation="vertical"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_33sdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Today(Current batch)"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@color/blue_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Yesterday"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@color/blue_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Month to Date(MTD)"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@color/blue_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Last Month"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@color/blue_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Custom Date Range"
            android:layout_marginTop="@dimen/_14sdp"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@color/blue_light" />

    </LinearLayout>
</LinearLayout>

