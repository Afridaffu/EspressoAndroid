<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundeddialog"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/_43sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_23sdp"
        android:background="@drawable/bg_core_colorfill" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_33sdp">

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensans_semibold"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="@string/today_current_batch"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/blue_light" />

        <TextView
            android:id="@+id/tv_yesterday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensans_semibold"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="@string/yesterday"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/blue_light" />

        <TextView
            android:id="@+id/tv_month_to_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensans_semibold"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="@string/month_to_date"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/blue_light" />

        <TextView
            android:id="@+id/tv_last_month"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensans_semibold"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="@string/lastmonth"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/blue_light" />

        <TextView
            android:id="@+id/tv_custom_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/opensans_semibold"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="@string/custom_date_range"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/blue_light" />

    </LinearLayout>
</LinearLayout>

