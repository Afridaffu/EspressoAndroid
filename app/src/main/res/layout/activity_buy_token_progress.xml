<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutConfetti"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context="com.coyni.android.view.BuyTokenProgressActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_dept_sucess"></ImageView>

            <TextView
                android:id="@+id/tvHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgSuccess"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Transaction Successful"
                android:textColor="@color/status"
                android:textSize="@dimen/text_size_22sp"></TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHead"
                android:layout_marginTop="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tvDepositHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Deposit Amount"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_14sp"></TextView>

                <TextView
                    android:id="@+id/tvDeptAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/opensans_bold"
                    android:text="48.00 CYN"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_14sp"></TextView>

                <LinearLayout
                    android:id="@+id/llPayMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDepositHead"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPayMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Payment Method"
                        android:textColor="@color/headcolor"
                        android:textSize="@dimen/text_size_14sp"></TextView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layoutCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDepositHead"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_card"></ImageView>

                            <TextView
                                android:id="@+id/tvCardNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_bold"
                                android:text=".... 3679"
                                android:textColor="@color/headcolor"
                                android:textSize="@dimen/text_size_15sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutBank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDepositHead"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvBank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_bold"
                                android:text="Bank of America"
                                android:textColor="@color/headcolor"
                                android:textSize="@dimen/text_size_14sp"></TextView>

                            <TextView
                                android:id="@+id/tvAccountNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:fontFamily="@font/opensans_bold"
                                android:text=".... 3679"
                                android:textColor="@color/headcolor"
                                android:textSize="@dimen/text_size_15sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/llPayMethod"
                    android:layout_marginTop="25dp"
                    android:background="#F3F3F3"></View>

                <TextView
                    android:id="@+id/tvDepIdHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Deposit ID"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_14sp"></TextView>

                <ImageView
                    android:id="@+id/imgCopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tvDepositId"
                    android:src="@drawable/ic_copy"></ImageView>

                <TextView
                    android:id="@+id/tvDepositId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/opensans_bold"
                    android:singleLine="true"
                    android:text="1IHDCBDCBK..."
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_14sp"></TextView>

                <TextView
                    android:id="@+id/tvBalHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDepIdHead"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Account Balance"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_14sp"></TextView>

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDepIdHead"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="98.00 CYN"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_14sp"></TextView>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutDone"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:background="@color/btnback"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Done"
                    android:textColor="@color/headcolor"
                    android:textSize="21sp"></TextView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>