<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/closeBtnUnderReview"
        android:layout_width="19.33dp"
        android:layout_height="19.33dp"
        android:src="@drawable/ic_close"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="32dp"
        />
    <ImageView
        android:id="@+id/veriFailed"
        android:layout_width="172dp"
        android:layout_height="172dp"
        android:src="@drawable/ic_failed"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="67dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iv_failed"
        android:textSize="24dp"
        android:textColor="@color/primary_black"
        android:layout_marginLeft="94dp"
        android:layout_marginRight="70dp"
        android:textAlignment="center"
        android:layout_marginTop="30.5dp"
        android:fontFamily="@font/opensans_bold"
        />

        <TextView
            android:id="@+id/failedcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/iv_failedcontent"
            android:textAlignment="center"
            android:textColor="@color/primary_black"
            android:textSize="16dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/failedcontent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/iv_failedcontentextention"
            android:textAlignment="center"
            android:textColor="@color/primary_black"
            android:textSize="15dp" />
    <TextView
        android:id="@+id/failedcontent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/failedcontent1"
        android:layout_marginRight="32dp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/iv_failedcontactex"
        android:textColor="@color/primary_color"
        android:textSize="15dp" />
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/idveriCardViewExitBtn"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="303dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="@color/primary_color"
        app:cardCornerRadius="32dp"
        android:layout_marginBottom="21dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/opensans_bold"
            />






    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    </ScrollView>

</LinearLayout>