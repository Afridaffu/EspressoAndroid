<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/veriFailed"
        android:layout_width="172dp"
        android:layout_height="172dp"
        android:src="@drawable/ic_failed"
        android:layout_marginLeft="@dimen/_85sdp"
        android:layout_marginTop="@dimen/_116sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/iv_failed"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/primary_black"
        android:layout_marginStart="@dimen/_37sdp"
        android:layout_marginEnd="@dimen/_37sdp"
        android:layout_marginTop="30.5dp"
        android:fontFamily="@font/opensans_bold"
        />

        <TextView
            android:id="@+id/failedcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_21sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/iv_failedcontent"
            android:textAlignment="center"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/failedcontent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_52sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/iv_failedcontentextention"
            android:textAlignment="center"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />
    <TextView
        android:id="@+id/failedcontent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/failedcontent1"
        android:layout_marginRight="@dimen/_21sdp"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/iv_failedcontactex"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_12ssp" />
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/idveriCardViewExitBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:layout_marginTop="@dimen/_149sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        app:cardBackgroundColor="@color/primary_color"
        app:cardCornerRadius="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_47sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/opensans_bold"
            />






    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    </ScrollView>

</LinearLayout>