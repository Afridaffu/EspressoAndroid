<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/companyhintdHolderLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/outline_box_unfocused"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_us" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="+1"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:background="@color/light_gray" />

        </LinearLayout>

        <com.greenbox.coyni.utils.MaskEditText.widget.MaskEditText
            android:id="@+id/companypnET"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:autofillHints="creditCardSecurityCode"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:fontFamily="@font/opensans_semibold"
            android:hint="Phone Number"
            android:imeOptions="actionNext"
            android:inputType="number|textNoSuggestions"
            android:maxLines="1"
            android:padding="14dp"
            android:singleLine="true"
            android:textColor="@color/primary_black"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/_12ssp"
            app:mask="(___) ___-____" />


    </LinearLayout>

    <TextView
        android:id="@+id/companyhintTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:fontFamily="@font/opensans_semibold"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Company Phone Number"
        android:textColor="@color/primary_black"
        android:textSize="@dimen/text_size_11sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/companyhintdHolderLL"
        app:layout_constraintStart_toStartOf="@+id/companyhintdHolderLL"
        app:layout_constraintTop_toTopOf="@+id/companyhintdHolderLL" />


</androidx.constraintlayout.widget.ConstraintLayout>