<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/dateback"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="May 8,2021"
        android:textColor="@color/headcolor"
        android:textSize="@dimen/text_size_14sp"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvName"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#1AB70000"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tvNameHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:text="JS"
                android:textColor="#BE1C1C"
                android:textSize="@dimen/text_size_14sp"></TextView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/cvName"
            android:fontFamily="@font/opensans_semibold"
            android:text="You Requested Maria 10.00 CYN"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_14sp"></TextView>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMessage"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/cvName"
            android:fontFamily="@font/opensans_regular"
            android:text="for Books"
            android:textColor="@color/otpvalue"
            android:textSize="@dimen/text_size_13sp"></TextView>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMessage"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Completed"
            android:textColor="@color/otpvalue"
            android:textSize="@dimen/text_size_10sp"></TextView>

        <LinearLayout
            android:id="@+id/layoutOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvCancel"
                android:layout_width="93dp"
                android:layout_height="27dp"
                android:layout_marginRight="7dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:strokeColor="@color/status"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Cancel"
                    android:textColor="@color/status"
                    android:textSize="@dimen/text_size_13sp"></TextView>
            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvRemindOpt"
                android:layout_width="93dp"
                android:layout_height="27dp"
                android:layout_marginLeft="7dp"
                app:cardBackgroundColor="@color/btnback"
                app:cardCornerRadius="14dp">

                <TextView
                    android:id="@+id/tvRemind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Remind"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_13sp"></TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRemind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/layoutMessage"
                android:layout_width="match_parent"
                android:layout_height="97dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etlMessage"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:hint="Message to Remind"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/status"
                    app:errorEnabled="false"
                    app:hintTextAppearance="@style/MsgHintLabel"
                    app:hintTextColor="@color/headcolor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="top"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:lineSpacingExtra="3dp"
                        android:maxLength="160"
                        android:maxLines="3"
                        android:padding="15dp"
                        android:text=" "
                        android:textColor="@color/smsotp"
                        android:textSize="@dimen/text_size_14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvCharCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="0/160"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_12sp"></TextView>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvRemind"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/btnback"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/btnRemind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Remind"
                    android:textColor="@color/headcolor"
                    android:textSize="@dimen/text_size_13sp"></TextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>