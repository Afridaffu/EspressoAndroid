<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#f2f4f5"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="May 8,2021"
        android:textColor="@color/primary_black"
        android:textSize="@dimen/text_size_14sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <TextView
                android:id="@+id/messageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Send funds from Alison L"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/amountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_11sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="-100.00"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageTV"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_8sdp"
                app:cardBackgroundColor="#FFEFD8"
                app:cardCornerRadius="@dimen/_27sdp">

                <TextView
                    android:id="@+id/statusTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="Pending"
                    android:textColor="#FFA701"
                    android:textSize="@dimen/_7ssp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/balanceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageTV"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_11sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Balance 1,000.00"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:layout_below="@id/balanceTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#D8E2F0"
        />
</LinearLayout>