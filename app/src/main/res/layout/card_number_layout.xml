<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/hintdHolderLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/outline_box_unfocused"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgCardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_7sdp"
                android:src="@drawable/ic_issue_card_inactive" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:background="@color/light_gray" />

        </LinearLayout>

        <com.santalu.maskara.widget.MaskEditText
            android:id="@+id/pnET"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center_vertical"
            android:hint="Card Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="19"
            android:maxLines="1"
            android:padding="14dp"
            android:privateImeOptions="disableSticker=true;disableGifKeyboard=true"
            android:singleLine="true"
            android:textColor="@color/primary_black"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/_12ssp"
            app:mask="____ ____ ____ ____" />


        <ImageView
            android:id="@+id/readCardIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_9sdp"
            android:src="@drawable/ic_camera"
            app:layout_constraintBottom_toBottomOf="@+id/hintdHolderLL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/hintdHolderLL" />

    </LinearLayout>

    <TextView
        android:id="@+id/hintTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:fontFamily="@font/opensans_semibold"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Card Number"
        android:textColor="@color/primary_black"
        android:textSize="@dimen/text_size_11sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/hintdHolderLL"
        app:layout_constraintStart_toStartOf="@+id/hintdHolderLL"
        app:layout_constraintTop_toTopOf="@+id/hintdHolderLL" />

</androidx.constraintlayout.widget.ConstraintLayout>