<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/dateback"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="May 8,2021"
        android:textColor="@color/headcolor"
        android:textSize="@dimen/text_size_14sp"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvType"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/tokensend"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_token_send"></ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tvAmount"
                android:layout_toRightOf="@+id/cvType"
                android:fontFamily="@font/opensans_bold"
                android:singleLine="true"
                android:text="GBT sent to 2732YDG..."
                android:textColor="@color/smsotp"
                android:textSize="@dimen/text_size_12sp"></TextView>

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/cvType"
                android:fontFamily="@font/opensans_semibold"
                android:text="50.00 GBT"
                android:textColor="@color/baltext"
                android:textSize="@dimen/text_size_12sp"></TextView>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/opensans_bold"
                android:text="-10.00 GBT"
                android:textColor="@color/hintcolor"
                android:textSize="@dimen/text_size_12sp"></TextView>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAmount"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Completed"
                android:textColor="#00CC6E"
                android:textSize="@dimen/text_size_10sp"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>