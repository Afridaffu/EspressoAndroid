<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timezoneLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <LinearLayout
        android:id="@+id/profileLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:orientation="horizontal">

<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="@dimen/_33sdp"-->
<!--            android:layout_margin="@dimen/_2sdp"-->
<!--            android:layout_height="@dimen/_33sdp"-->
<!--            app:cardCornerRadius="@dimen/_16sdp">-->

<!--            <ImageView-->
<!--                android:id="@+id/profileImage"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:src="@drawable/profile" />-->
<!--        </androidx.cardview.widget.CardView>-->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_18sdp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/businessProfileAccountItemChildImage"
                android:scaleType="fitXY"
                android:src="@drawable/ic_case"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:text=""
            android:textColor="@drawable/dba_text_enable_disable"
            android:textSize="@dimen/text_size_14sp" />

        <LinearLayout
            android:id="@+id/statusLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10ssp"
            android:background="@drawable/txn_pending_bg"
            android:gravity="center_horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tickIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toTopOf="@id/tickIcon">

            <TextView
                android:id="@+id/statusTV"
                android:layout_width="@dimen/_68sdp"
                android:layout_height="@dimen/_14sdp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text=""
                android:textColor="#FFA701"
                android:textSize="@dimen/_7ssp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/tickIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10ssp"
            android:src="@drawable/ic_custom_tick"
            android:visibility="gone"
            app:tint="@color/primary_green" />

    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />
</LinearLayout>