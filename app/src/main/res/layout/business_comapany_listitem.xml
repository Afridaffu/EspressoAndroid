<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/timezoneLL"
    android:background="@color/white"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/profileLL"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_16sdp">

        <ImageView
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:id="@+id/profileImage"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/title"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/primary_black"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:textSize="@dimen/text_size_14sp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/statusLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/tickIcon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/_10ssp"
            app:layout_constraintTop_toTopOf="@id/tickIcon"
            android:layout_alignParentLeft="true"
            android:background="@drawable/txn_pending_bg"
            android:visibility="gone">

            <TextView
                android:id="@+id/statusTV"
                android:layout_width="@dimen/_68sdp"
                android:layout_height="@dimen/_14sdp"
                android:fontFamily="@font/opensans_bold"
                android:text=""
                android:gravity="center"
                android:textColor="#FFA701"
                android:textSize="@dimen/_7ssp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/tickIcon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_custom_tick"
            app:tint="@color/primary_green" />

    </LinearLayout>
    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>
</LinearLayout>