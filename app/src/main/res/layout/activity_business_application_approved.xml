<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_21sdp"
        >
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/additional_action_required"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_88sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Approved!"
        android:fontFamily="@font/opensans_bold"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/primary_black"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_22sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your interest in coyni. After\ncarefully reviewing. The coyni team made\ndecision to approve your application with"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/primary_black"
        android:fontFamily="@font/opensans_regular"
        android:layout_gravity="center"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_36sdp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_11ssp"
                android:text="reserve conditions."
                android:fontFamily="@font/opensans_semibold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_x"
                android:layout_marginLeft="@dimen/_5sdp"
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/at_gray"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_11sdp"
                    android:paddingStart="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_11sdp"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Volume : "
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/light_gray_black"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100,000.00"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/opensans_bold"
                    android:textColor="@color/primary_color"

                    />

            </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_11sdp"
                        >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High Tickets : "
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/light_gray_black"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1,000.00"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/primary_color"

                        />
                  </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_55sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/at_gray"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_11sdp"
                    android:paddingStart="@dimen/_11sdp"
                    android:paddingEnd="@dimen/_11sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reserve Amount Per Transaction : "
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/light_gray_black"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5%"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/primary_color"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_11sdp"
                    android:background="@color/at_gray"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reserve Period : "
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/light_gray_black"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 days"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/primary_color"

                        />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:cardBackgroundColor="@color/primary_color"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_33sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Accept"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>
         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_13sdp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Decline"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/primary_color" />




     </LinearLayout>
    </ScrollView>
</LinearLayout>