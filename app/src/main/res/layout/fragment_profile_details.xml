<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#13A5A1"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context="com.coyni.android.view.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_group_19598"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_arrow"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/opensans_semibold"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_logout"
                android:drawablePadding="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:visibility="gone"></TextView>
        </RelativeLayout>


        <View
            android:id="@+id/viewdiv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"></View>

        <RelativeLayout
            android:id="@+id/layoutHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewdiv"
            android:background="@drawable/transactionscorner">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:paddingTop="30dp">

                        <LinearLayout
                            android:id="@+id/layoutCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:padding="8dp">


                                <TextView
                                    android:id="@+id/tvUserHead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="15dp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="User Name"
                                    android:textColor="@color/headcolor"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/tvUserHead"
                                    android:fontFamily="@font/opensans_regular"
                                    android:gravity="right"
                                    android:text=""
                                    android:textColor="#9B9B9B"
                                    android:textSize="14dp"></TextView>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#E2E2E2"></View>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:padding="8dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="Email"
                                    android:textColor="@color/headcolor"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tvUserMail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="John@Mail.com"
                                    android:textColor="#9B9B9B"
                                    android:textSize="14dp"></TextView>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#E2E2E2"></View>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:padding="8dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="Phone Number"
                                    android:textColor="@color/headcolor"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tvUserPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="+91 - 1827336363"
                                    android:textColor="#9B9B9B"
                                    android:textSize="14dp"></TextView>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#E2E2E2"></View>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:padding="8dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="Local Currency"
                                    android:textColor="@color/headcolor"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/tvLocalCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="US Dollar"
                                    android:textColor="#9B9B9B"
                                    android:textSize="14dp"></TextView>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="#E2E2E2"></View>

                            <TextView
                                android:id="@+id/tvAddressEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:drawableRight="@drawable/ic_edit_address"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/opensans_semibold"
                                android:padding="8dp"
                                android:text="Address"
                                android:textColor="@color/headcolor"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/tvAddressWithoutEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/opensans_semibold"
                                android:padding="8dp"
                                android:text="Address"
                                android:textColor="@color/headcolor"
                                android:textSize="14dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvAvailableAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_margin="5dp"
                                android:fontFamily="@font/opensans_semibold"
                                android:padding="8dp"
                                android:text=""
                                android:textColor="@color/hintcolor"
                                android:textSize="14dp"></TextView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvAddAddress"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_margin="10dp"
                                android:padding="8dp"
                                android:visibility="gone"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_buy_add"></ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="Add New Address"
                                        android:textColor="@color/status"
                                        android:textSize="@dimen/text_size_16sp"></TextView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Payment with Bank Account"
                                android:textColor="@color/headcolor"
                                android:textSize="@dimen/text_size_14sp"></TextView>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvBank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvDebitHead"
                                android:layout_marginTop="20dp"
                                android:divider="@null"
                                android:nestedScrollingEnabled="true"
                                android:overScrollMode="never"
                                android:scrollbars="none" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvAddBank"
                                android:layout_width="match_parent"
                                android:layout_height="62dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginBottom="1dp"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_buy_add"></ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="Add New Bank"
                                        android:textColor="@color/status"
                                        android:textSize="@dimen/text_size_16sp"></TextView>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/viewdiv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dp">

            <RelativeLayout
                android:id="@+id/lyImage"
                android:layout_width="100dp"
                android:layout_height="100dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_profile_male_user"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#FFFFFF"
                    app:civ_shadow_radius="0" />

                <ImageView
                    android:id="@+id/imgCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic_camera"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_active_green" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/lyImage"
                android:fontFamily="@font/opensans_semibold"
                android:text="Active"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_14sp"></TextView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>