<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundeddialog"
        android:orientation="vertical">

        <View
            android:id="@+id/viewCancel"
            android:layout_width="@dimen/_43sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/view_primary_gren_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_21sdp"
            android:layout_marginRight="@dimen/_21sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="vertical"
            android:paddingTop="@dimen/_11sdp">

            <TextView
                android:id="@+id/tvChooseLibrary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/opensans_semibold"
                android:paddingVertical="@dimen/_15sdp"
                android:text="@string/choose_library"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/blue_light" />

            <TextView
                android:id="@+id/tvTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/opensans_semibold"
                android:paddingVertical="@dimen/_15sdp"
                android:text="@string/take_photo"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/blue_light" />

            <LinearLayout
                android:id="@+id/ll_browse_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/browseFileTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/opensans_semibold"
                    android:paddingVertical="@dimen/_15sdp"
                    android:text="@string/browse_files"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_12ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/blue_light" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>