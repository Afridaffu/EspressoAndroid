<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context="com.coyni.android.view.BuyTokenActivityProfile">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status"
        app:elevation="0dp"
        app:theme="@style/Theme.QuickCard.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_sent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingEnd="72dp"
            app:popupTheme="@style/Theme.QuickCard.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Saved Cards"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16sp"></TextView>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="-30dp"
        android:src="@drawable/ic_addcard_back"></ImageView>

    <View
        android:id="@+id/viewdiv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/appbar"
        android:layout_marginTop="20dp"></View>

    <RelativeLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewdiv"
        android:background="@drawable/transactionscorner">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/layoutCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/rvCards"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginTop="10dp"
                                android:clipToPadding="false"
                                android:divider="@null"
                                android:nestedScrollingEnabled="true"
                                android:overScrollMode="never"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tvEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_edit_bg"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Edit"
                                android:textColor="@color/hintcolor"
                                android:textSize="@dimen/text_size_16sp" />


                            <TextView
                                android:id="@+id/tvRemove"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_remove_bg"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Remove"
                                android:textColor="#D55E5E"
                                android:textSize="@dimen/text_size_16sp"></TextView>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvAdd"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="1dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_buy_add"></ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="Add New Card"
                                    android:textColor="@color/status"
                                    android:textSize="@dimen/text_size_16sp"></TextView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="Payment with Bank Account"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp"></TextView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:divider="@null"
                            android:nestedScrollingEnabled="true"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvAddBank"
                            android:layout_width="match_parent"
                            android:layout_height="62dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="1dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_buy_add"></ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="Add New Bank"
                                    android:textColor="@color/status"
                                    android:textSize="@dimen/text_size_16sp"></TextView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>