<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundeddialog"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_21sdp"
    android:paddingRight="@dimen/_21sdp"
    android:paddingBottom="@dimen/_27sdp"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">


    <LinearLayout
        android:id="@+id/vieww"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape_green_round_rect" />

    </LinearLayout>

    <TextView
        android:id="@+id/headerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vieww"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/opensans_bold"
        android:text="Business Type"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp" />

    <LinearLayout
        android:id="@+id/searchLL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/headerTV"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_core_search_et_"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:src="@drawable/ic_search_icon" />

        <EditText
            android:id="@+id/searchET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:focusable="true"
            android:fontFamily="@font/opensans_semibold"
            android:hint="Type"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:privateImeOptions="disableSticker=true;disableGifKeyboard=true"
            android:singleLine="true"
            android:textColor="@color/primary_black"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bTypesRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchLL"
        android:layout_marginTop="@dimen/_20sdp"
        android:scrollbars="vertical"
        android:visibility="visible" />

    <TextView
        android:id="@+id/notFoundTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:text="No Business Type is found"
        android:textColor="@color/xdark_gray"
        android:textSize="@dimen/_14ssp"
        android:visibility="gone" />


</RelativeLayout>