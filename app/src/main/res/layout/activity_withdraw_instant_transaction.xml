<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/et_bg_gray"
    >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/backgrndbtmcornrs"
                  android:orientation="vertical"
                  android:paddingLeft="@dimen/_22sdp"
                  >

                  <LinearLayout
                      android:id="@+id/withInstantprevious"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/_45sdp"
                      android:layout_marginBottom="@dimen/_14sdp"
                      android:orientation="horizontal">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="@dimen/_10sdp"
                          android:src="@drawable/ic_chevron_left"
                          />
                  </LinearLayout>

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/_11sdp"
                      android:fontFamily="@font/opensans_bold"
                      android:text="Transaction Details"
                      android:textColor="@color/black"
                      android:textSize="@dimen/_16ssp" />
              </LinearLayout>
              <ScrollView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:scrollbars="none"
                  >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="@dimen/_10sdp"
                  android:layout_marginLeft="@dimen/_11sdp"
                  android:layout_marginRight="@dimen/_11sdp"
                  android:layout_marginTop="@dimen/_12sdp"
                  >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      >
                      <TextView
                          android:id="@+id/withinheaderTV"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:fontFamily="@font/opensans_semibold"
                          android:textColor="@color/black"
                          android:textSize="@dimen/_12ssp"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_22sdp"
                          android:layout_marginBottom="@dimen/_6sdp"
                          />
                      <LinearLayout
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center">
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="$"
                              android:layout_marginRight="@dimen/_4sdp"
                              android:textSize="@dimen/_24ssp"
                              android:layout_gravity="center"
                              android:fontFamily="@font/opensans_bold"
                              android:textColor="@color/primary_color"
                              />

                          <TextView
                              android:id="@+id/withinamount"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/_24ssp"
                              android:layout_gravity="center"
                              android:fontFamily="@font/opensans_bold"
                              android:textColor="@color/primary_color"
                              />
                      </LinearLayout>
                      <TextView
                          android:id="@+id/withindescrptnTV"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="@dimen/_11sdp"
                          android:layout_marginTop="@dimen/_6sdp"
                          android:layout_marginRight="@dimen/_11sdp"
                          android:fontFamily="@font/opensans_regular"
                          android:gravity="center"
                          android:textColor="@color/primary_black"
                          android:textSize="@dimen/_10ssp" />

                      <View
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/_1sdp"
                          android:layout_gravity="center"
                          android:layout_marginLeft="@dimen/_11sdp"
                          android:layout_marginRight="@dimen/_11sdp"
                          android:background="@color/blue_light"
                          android:layout_marginTop="@dimen/_11sdp"
                          android:layout_marginBottom="@dimen/_11sdp"
                          />

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingRight="@dimen/_11sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:fontFamily="@font/opensans_regular"
                              android:text="Status"
                              android:layout_marginTop="@dimen/_8sdp"
                              android:layout_marginBottom="@dimen/_11sdp"
                              android:textColor="@color/dark_grey"
                              android:textSize="@dimen/_11ssp" />

                          <TextView
                              android:id="@+id/withinstatus"
                              android:layout_width="@dimen/_68sdp"
                              android:layout_height="@dimen/_14sdp"
                              android:layout_marginTop="@dimen/_6sdp"
                              android:background="@drawable/fill_grn_color_smallradius"
                              android:fontFamily="@font/opensans_bold"
                              android:gravity="center"
                              android:text="Completed"
                              android:textColor="@color/active_green"
                              android:textSize="@dimen/_7ssp" />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_11sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingRight="@dimen/_11sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Date &amp; Time"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_regular"
                              android:textColor="@color/dark_grey"
                              />
                          <TextView
                              android:id="@+id/withindateTimeTV"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text=""
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_semibold"
                              android:textColor="@color/primary_black"
                              android:gravity="right"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_11sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingRight="@dimen/_11sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Withdraw Amount"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_regular"
                              android:textColor="@color/dark_grey"
                              />
                          <TextView
                              android:id="@+id/withinwithdrawamount"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text=""
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_semibold"
                              android:textColor="@color/primary_black"
                              android:gravity="right"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_11sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingRight="@dimen/_11sdp"

                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Processing Fee"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_regular"
                              android:textColor="@color/dark_grey"
                            />
                          <TextView
                              android:id="@+id/withinprocessingfee"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text=""
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_semibold"
                              android:textColor="@color/primary_black"
                              android:gravity="right"
                               />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_8sdp"
                          android:paddingTop="@dimen/_6sdp"
                          android:paddingRight="@dimen/_8sdp"
                          >
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:fontFamily="@font/opensans_regular"
                              android:text="Total Amount"
                              android:textColor="@color/dark_grey"
                              android:textSize="@dimen/_11ssp" />
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginBottom="@dimen/_10sdp"
                                  android:fontFamily="@font/opensans_regular"
                                  android:text="(Withdraw Amount + Processing Fee)"
                                  android:textColor="@color/dark_grey"
                                  android:textSize="@dimen/_10ssp" />
                          </LinearLayout>

                          <TextView
                              android:id="@+id/withintotalamount"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/_8sdp"
                              android:layout_marginRight="@dimen/_4sdp"
                              android:fontFamily="@font/opensans_semibold"
                              android:gravity="right"
                              android:text=""
                              android:textColor="@color/primary_black"
                              android:textSize="@dimen/_11ssp" />
                      </LinearLayout>
                      <LinearLayout
                          android:id="@+id/account_balance_ll"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_11sdp"
                          android:paddingRight="@dimen/_11sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Account Balance"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_regular"
                              android:textColor="@color/dark_grey"
                              />
                          <TextView
                              android:id="@+id/withinaccountbal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text=""
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_semibold"
                              android:textColor="@color/primary_black"
                              android:gravity="right"
                             />
                      </LinearLayout>
                  </LinearLayout>
              </androidx.cardview.widget.CardView>
              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="@dimen/_10sdp"
                  android:layout_marginLeft="@dimen/_11sdp"
                  android:layout_marginRight="@dimen/_11sdp"
                  android:layout_marginTop="@dimen/_12sdp"
                  >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      >
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_11sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingRight="@dimen/_11sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Withdraw ID"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_regular"
                              android:textColor="@color/dark_grey"
                              />
                          <LinearLayout
                              android:id="@+id/withiwithdrawalLL"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                          <TextView
                              android:id="@+id/withinwithdrawidTV"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_semibold"
                              android:textColor="@color/primary_black"
                              android:gravity="right"
                              />
                          <ImageView
                              android:id="@+id/withinwithIDIV"
                              android:layout_width="@dimen/_11sdp"
                              android:layout_height="@dimen/_11sdp"
                              android:src="@drawable/ic_copy"
                              android:layout_marginLeft="@dimen/_6sdp"
                              android:layout_gravity="center"
                              />
                          </LinearLayout>
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_11sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingRight="@dimen/_11sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Reference ID"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_regular"
                              android:textColor="@color/dark_grey"
                              />
                          <LinearLayout
                              android:id="@+id/withiReferenceIDLL"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              >
                          <TextView
                              android:id="@+id/withinrefid"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text=""
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_semibold"
                              android:textColor="@color/primary_black"
                              android:gravity="right" />
                          <ImageView
                              android:id="@+id/withinrefIDIV"
                              android:layout_width="@dimen/_11sdp"
                              android:layout_height="@dimen/_11sdp"
                              android:src="@drawable/ic_copy"
                              android:layout_marginLeft="@dimen/_6sdp"
                              android:layout_gravity="center"
                              />
                          </LinearLayout>
                      </LinearLayout>
                  </LinearLayout>
              </androidx.cardview.widget.CardView>
              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="@dimen/_10sdp"
                  android:layout_marginLeft="@dimen/_11sdp"
                  android:layout_marginRight="@dimen/_11sdp"
                  android:layout_marginTop="@dimen/_11sdp"
                  android:layout_marginBottom="@dimen/_20sdp"
                  >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      >
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_11sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingRight="@dimen/_11sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Card Holder Name"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_regular"
                              android:textColor="@color/dark_grey"
                             />
                          <TextView
                              android:id="@+id/withincardholdername"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text=""
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_semibold"
                              android:textColor="@color/primary_black"
                              android:gravity="right"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_11sdp"
                          android:paddingRight="@dimen/_11sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Card Number"
                              android:layout_marginTop="@dimen/_8sdp"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_regular"
                              android:textColor="@color/dark_grey"
                              />

                          <ImageView
                              android:id="@+id/withincardbrandIV"
                              android:layout_width="@dimen/_20sdp"
                              android:layout_height="@dimen/_20sdp"
                              android:layout_gravity="right|center"
                              android:layout_marginTop="@dimen/_4sdp"
                              android:layout_marginLeft="@dimen/_6sdp"
                              android:layout_marginRight="@dimen/_8sdp"/>

                          <TextView
                              android:id="@+id/withincardnumTV"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="@dimen/_4sdp"
                              android:layout_gravity="right|center"
                              android:fontFamily="@font/opensans_semibold"
                              android:text="...4545"
                              android:textColor="@color/primary_black"
                              android:textSize="@dimen/_11ssp" />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="horizontal"
                          android:paddingLeft="@dimen/_11sdp"
                          android:paddingBottom="@dimen/_11sdp"
                          android:paddingTop="@dimen/_8sdp"
                          android:paddingRight="@dimen/_11sdp"
                          >
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Expiration Date"
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_regular"
                              android:textColor="@color/dark_grey"
                              />
                          <TextView
                              android:id="@+id/withinexpdateTV"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text=""
                              android:textSize="@dimen/_11ssp"
                              android:fontFamily="@font/opensans_semibold"
                              android:textColor="@color/primary_black"
                              android:gravity="right"
                             />
                      </LinearLayout>
                  </LinearLayout>
              </androidx.cardview.widget.CardView>
                   <TextView
                       android:id="@+id/activity_log_tv"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/_21sdp"
                       android:layout_marginRight="@dimen/_21sdp"
                       android:fontFamily="@font/opensans_bold"
                       android:text="Activity Log"
                       android:textColor="@color/primary_black"
                       android:textSize="@dimen/_12ssp"
                       android:visibility="gone" />

                   <androidx.cardview.widget.CardView
                       android:id="@+id/cv_activity_log"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/_11sdp"
                       android:layout_marginTop="@dimen/_12sdp"
                       android:layout_marginRight="@dimen/_11sdp"
                       android:layout_marginBottom="@dimen/_20sdp"
                       android:visibility="gone"
                       app:cardCornerRadius="@dimen/_10sdp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <androidx.recyclerview.widget.RecyclerView
                               android:id="@+id/recycler_view"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />

                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
               </LinearLayout>
              </ScrollView>
          </LinearLayout>

</LinearLayout>