<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/documentRequired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginHorizontal="@dimen/_21sdp">


        <LinearLayout
            android:id="@+id/sscFileUploadLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/_14sdp"
            android:background="@drawable/bg_white_color_light_border"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_13sdp"
            android:paddingBottom="@dimen/_14sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_6sdp"
                android:src="@drawable/ic_upload"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/sscuploadFileTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/upload_file"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/sscfileUploadedLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/uploadedSucess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/uploadedTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="left"
                        android:text="Uploaded"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/sscfileUpdatedOnTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="jjhgfddfghjkhg"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_8ssp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:src="@drawable/ic_complete" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>