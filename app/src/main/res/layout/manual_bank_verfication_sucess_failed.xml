<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/validateCV"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_21sdp"
                    android:src="@drawable/ic_success_icon" />

                <TextView
                    android:id="@+id/headerTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:text="@string/bank_account_added"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp" />

                <LinearLayout
                    android:id="@+id/infoLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headerTV"
                    android:layout_marginHorizontal="@dimen/_21sdp"
                    android:layout_marginTop="@dimen/_21sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/bg_bluelight_border"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_11sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="Status"
                                    android:textColor="@color/xdark_gray"
                                    android:textSize="@dimen/_11ssp" />

                                <TextView
                                    android:id="@+id/statusTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bank_status_bg"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:paddingStart="@dimen/_3sdp"
                                    android:paddingEnd="@dimen/_3sdp"
                                    android:text="Approved"
                                    android:textColor="@color/active_green"
                                    android:textSize="@dimen/_10ssp" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/errorDescriptnTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginBottom="@dimen/_12sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:text="Bank verification failed due to error code: {error code - error code description}. Please try again."
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp"
                                android:visibility="gone" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:background="@color/viewcolor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="Name on Account"
                                    android:textColor="@color/xdark_gray"
                                    android:textSize="@dimen/_11ssp" />

                                <TextView
                                    android:id="@+id/nameOnBankTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:gravity="end"
                                    android:text=""
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_11ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="Institution"
                                    android:textColor="@color/xdark_gray"
                                    android:textSize="@dimen/_11ssp" />

                                <TextView
                                    android:id="@+id/bankNameTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:gravity="end"
                                    android:text=""
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_11ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="Routing Number"
                                    android:textColor="@color/xdark_gray"
                                    android:textSize="@dimen/_11ssp" />

                                <TextView
                                    android:id="@+id/routingNumTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:gravity="end"
                                    android:text=""
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_11ssp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="Account Number"
                                    android:textColor="@color/xdark_gray"
                                    android:textSize="@dimen/_11ssp" />

                                <TextView
                                    android:id="@+id/accNumTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:gravity="end"
                                    android:text=""
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_11ssp" />
                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/validateCV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_21sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardBackgroundColor="@color/primary_green"
                app:cardCornerRadius="@dimen/_21sdp">

                <TextView
                    android:id="@+id/doneTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>
</LinearLayout>