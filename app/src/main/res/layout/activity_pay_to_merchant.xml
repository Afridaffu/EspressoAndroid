<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boxbackgroundgray"
    tools:context=".view.business.PayToMerchantActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f4f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgrndbtmcornrs"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingTop="@dimen/_40sdp"
            android:paddingRight="@dimen/_21sdp"
            android:paddingBottom="@dimen/_11sdp">


            <LinearLayout
                android:id="@+id/payToMerchantClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/ic_x" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/pay_to_merchant"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layoutLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ckb"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_account_profile_image"
                    android:layout_width="@dimen/_54sdp"
                    android:layout_height="@dimen/_54sdp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_22sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_27sdp"
                    app:layout_constraintStart_toEndOf="@+id/title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/userProfileIV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/acct_profile"
                        android:contentDescription="@string/businessProfileAccountItemChildImage"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/userProfileTextTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_20sdp"
                        android:visibility="gone" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/merchantyNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_14ssp" />

                    <TextView
                        android:id="@+id/merchantTypeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/accountAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_124sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:paddingStart="@dimen/_20sdp"
                            android:paddingEnd="@dimen/_30sdp">

                            <TextView
                                android:id="@+id/tvCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_toLeftOf="@+id/lyAmount"
                                android:fontFamily="@font/opensans_bold"
                                android:paddingTop="@dimen/_9sdp"
                                android:paddingBottom="@dimen/_7sdp"
                                android:text="$"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_40ssp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/lyAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_toLeftOf="@+id/imageConvertIV"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/merchantAmountET"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_72sdp"
                                    android:background="@color/white"
                                    android:fontFamily="@font/opensans_bold"
                                    android:gravity="center_vertical|end"
                                    android:hint="0.00"
                                    android:inputType="numberDecimal"
                                    android:maxLength="@string/maxlength"
                                    android:textColor="@color/primary_black"
                                    android:textColorHint="@color/light_gray"
                                    android:textCursorDrawable="@drawable/cursorcolor"
                                    android:textDirection="rtl"
                                    android:textSize="@dimen/_53ssp" />


                                <TextView
                                    android:id="@+id/tvCYN"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_bold"
                                    android:text=" CYN"
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_12ssp"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imageConvertIV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:src="@drawable/ic_download" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvError"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:text="Amount entered exceeds your daily limit"
                            android:textColor="@color/error"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/lybalance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_regular"
                                android:text="Available Balance: "
                                android:textColor="@color/balance"
                                android:textSize="@dimen/_9ssp" />

                            <TextView
                                android:id="@+id/tvAvailableBal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_bold"
                                android:textColor="@color/balance"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_bold"
                                android:text=" CYN"
                                android:textColor="@color/balance"
                                android:textSize="@dimen/_9ssp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="#d8e2f0" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.greenbox.coyni.utils.keyboards.CustomKeyboard
                android:id="@+id/ckb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_5sdp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>