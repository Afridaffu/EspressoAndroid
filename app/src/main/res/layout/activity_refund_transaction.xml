<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/et_bg_gray"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/topLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/backgrndbtmcornrs"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lyPRClose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/RefundbackIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/refund_transaction"
                        android:src="@drawable/ic_close" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_22sdp"
                    android:layout_marginBottom="@dimen/_11sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/refund_transaction"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrlSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_above="@id/ckbrefund"
                android:layout_below="@id/topLL"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/et_bg_gray"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_1sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lyAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_65sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/refundAmountET"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_78sdp"
                                        android:background="@color/white"
                                        android:fontFamily="@font/opensans_bold"
                                        android:gravity="center_vertical|right"
                                        android:hint="0.00"
                                        android:textIsSelectable="false"
                                        android:cursorVisible="true"
                                        android:autofillHints="creditCardSecurityCode"
                                        android:longClickable="false"
                                        android:clickable="false"
                                        android:inputType="numberDecimal"
                                        android:maxLength="8"
                                        android:singleLine="true"
                                        android:textColor="@color/primary_black"
                                        android:textColorHint="@color/light_gray"
                                        android:textCursorDrawable="@drawable/cursorcolor"
                                        android:textSize="@dimen/_53ssp" />


                                    <TextView
                                        android:id="@+id/tvCYN"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/opensans_bold"
                                        android:text=" CYN"
                                        android:textColor="@color/primary_black"
                                        android:textSize="@dimen/_12ssp"
                                        android:visibility="visible" />
                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvError"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:text="Amount entered exceeds your daily limit"
                                android:textColor="@color/error"
                                android:textSize="@dimen/_10ssp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="@string/transactionamount"
                                    android:textColor="@color/balance"
                                    android:textSize="@dimen/_11ssp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/refundCurrencyTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3sp"
                                    android:fontFamily="@font/opensans_bold"
                                    android:text=""
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_12ssp"
                                    android:visibility="visible" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_bold"
                                    android:text=" CYN"
                                    android:textColor="@color/primary_black"
                                    android:textSize="@dimen/_11ssp"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_21sdp"
                                android:layout_weight="1"
                                android:orientation="horizontal">


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/FullamountSOT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    app:cardCornerRadius="@dimen/_21sdp"
                                    app:cardBackgroundColor="@color/slidebtn_bg"
                                    android:layout_marginStart="@dimen/_1sdp"
                                    android:layout_marginBottom="@dimen/_1sdp">

                                    <TextView
                                        android:id="@+id/FullamountTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:layout_marginBottom="@dimen/_8sdp"
                                        android:text="@string/full_amount"
                                        android:textColor="@color/chip_text_color"
                                        android:textSize="@dimen/_11ssp" />
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/HalfamountSOT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="@dimen/_21sdp"
                                    app:cardBackgroundColor="@color/slidebtn_bg"
                                    android:layout_marginEnd="@dimen/_1sdp"
                                    android:layout_marginBottom="@dimen/_1sdp">

                                    <TextView
                                        android:id="@+id/halfamountTV"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:layout_marginBottom="@dimen/_8sdp"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:text="1/2 Amount"
                                        android:textColor="@color/chip_text_color"
                                        android:textSize="@dimen/_11ssp" />
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:background="#d8e2f0" />

                            <LinearLayout
                                android:id="@+id/remarksLL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/eTremarks"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_120sdp"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:fontFamily="@font/opensans_regular"
                                    android:hint="Reason for Refund (Maximun 120 characters)"
                                    android:padding="@dimen/_6sdp"
                                    android:textColor="@color/primary_black"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

            <com.coyni.mapp.utils.keyboards.CustomKeyboard
                android:id="@+id/ckbrefund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_5sdp" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>