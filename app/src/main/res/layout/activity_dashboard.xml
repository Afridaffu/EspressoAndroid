<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F5"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context=".view.DashboardActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_229sdp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_dash_back" />

            <LinearLayout
                android:id="@+id/layoutPrPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="?attr/actionBarSize"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvProfile"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="18dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_shape"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="100"
                            android:progressDrawable="@drawable/circular_progress_bar" />

                        <TextView
                            android:id="@+id/tvUserInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/opensans_bold"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            android:visibility="gone"></TextView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvProfilePic"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_centerInParent="true"
                            android:visibility="visible"
                            app:cardCornerRadius="16dp">

                            <ImageView
                                android:id="@+id/imgProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_profile"
                                android:visibility="visible"></ImageView>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Hi! [Name Selected]"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_11ssp"></TextView>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_marginRight="@dimen/_21sdp"
                android:src="@drawable/ic_notifications"></ImageView>

            <TextView
                android:id="@+id/tvBalHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutPrPic"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans_bold"
                android:text="Available Balance"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp"
                android:visibility="invisible"></TextView>

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBalHead"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="0.00"
                android:textColor="@color/price"
                android:textSize="@dimen/_30ssp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBalHead"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_toRightOf="@+id/tvBalance"
                android:fontFamily="@font/opensans_semibold"
                android:text="CYN"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_14ssp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBalance"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_23sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_145sdp"
                    android:layout_height="@dimen/_32sdp"
                    app:cardBackgroundColor="@color/primary_green"
                    app:cardCornerRadius="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/opensans_bold"
                        android:text="Pay/Request"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"></TextView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/scanQrLL"
                    android:layout_width="@dimen/_71sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:background="@drawable/scanroundedborder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_scan"
                        app:tint="@color/primary_green"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutMenu"
        android:layout_below="@+id/cvHeader"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_47sdp"
                android:src="@drawable/ic_account_created"></ImageView>

            <View
                android:id="@+id/divider"
                android:layout_width="159.8564453125dp"
                android:layout_height="5.4189453125dp"
                android:layout_below="@+id/imgHead"
                android:layout_centerHorizontal="true"
                android:background="#1c567675" />

            <TextView
                android:id="@+id/tvHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_28sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="You’re almost there!"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHead"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Finish the set up your account in less than 5 min."
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_11ssp"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                app:cardBackgroundColor="@color/primary_green"
                app:cardCornerRadius="@dimen/_21sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Get Started"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"></TextView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/viewMoreLL"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_43sdp"
        android:layout_marginStart="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/_100sdp"
        android:background="@drawable/shape_green_round_rect_core"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:text="View More"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menuborder"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_9sdp"
        android:paddingBottom="@dimen/_25sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_token_active"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Dashboard"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/_8ssp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCrypto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_crypto_inactive"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Crypto"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_8ssp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_quick_action_menu"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_issue_card_inactive"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:text="Issue\nCard"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_8ssp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Profile"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_8ssp"></TextView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>