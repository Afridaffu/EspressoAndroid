<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_21sdp"
        android:paddingEnd="@dimen/_21sdp">

        <ScrollView
            android:id="@+id/linearLayoutIdVe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/bottomNaviLL"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upidentityTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/uploadid"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:id="@+id/clickBottomSheet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_19sdp"
                        android:background="@drawable/card_background"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_marginBottom="@dimen/_13sdp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_upload_id" />


                        <TextView
                            android:id="@+id/idveriUpIdTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:lineSpacingExtra="5dp"
                            android:text="@string/contentuploadid"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/fileSelectedLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/idveriUpIdSuccessTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_17sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="@dimen/_18sdp"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_regular"
                                android:lineSpacingExtra="@dimen/_6sdp"
                                android:singleLine="true"
                                android:text="@string/contentuploadidsuccess"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_11ssp"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/idveriUpIdSuccessImg"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:src="@drawable/ic_complete"
                                android:visibility="visible" />


                        </LinearLayout>


                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/idveriSSNTIL"
                        style="@style/TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:hint="@string/ssnlast"
                        android:textColorHint="@color/black"
                        app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                        app:boxCornerRadiusTopStart="@dimen/_10sdp"
                        app:boxStrokeColor="@color/primary_color"
                        app:expandedHintEnabled="false"
                        app:hintTextColor="@color/primary_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/idVeriSSNET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:hint="@string/digits4"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="4"
                            android:padding="@dimen/_14sdp"
                            android:textColor="@color/primary_black"
                            android:textColorHint="@color/light_gray"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:textSize="@dimen/_12ssp"
                            android:autofillHints="creditCardSecurityCode"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/ssnErrorLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/ic_erro" />

                        <TextView
                            android:id="@+id/ssnErrorTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/error_red"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/idveriDOBCL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_21sdp">

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:src="@drawable/ic_down"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/idveriDOBTIL"
                            app:layout_constraintHorizontal_bias="0.952"
                            app:layout_constraintStart_toStartOf="@+id/idveriDOBTIL"
                            app:layout_constraintTop_toTopOf="@+id/idveriDOBTIL"
                            app:layout_constraintVertical_bias="0.557"
                            app:layout_editor_absoluteX="336.24dp"
                            app:layout_editor_absoluteY="26.28dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/idveriDOBTIL"
                            style="@style/TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:hint="@string/dobol"
                            android:textColorHint="@color/black"
                            app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                            app:boxCornerRadiusTopStart="@dimen/_10sdp"
                            app:boxStrokeColor="@color/primary_color"
                            app:expandedHintEnabled="false"
                            app:hintTextColor="@color/primary_color"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/idveriDOBET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:cursorVisible="false"
                                android:editable="false"
                                android:focusable="false"
                                android:fontFamily="@font/opensans_semibold"
                                android:hint="@string/dobhint"
                                android:imeOptions="actionDone"
                                android:inputType="none"
                                android:maxLength="30"
                                android:padding="@dimen/_14sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/light_gray"
                                android:textSize="@dimen/_12ssp"
                                android:autofillHints="creditCardSecurityCode"/>


                        </com.google.android.material.textfield.TextInputLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomNaviLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_37sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/nextBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_43sdp"
                        app:cardBackgroundColor="@color/inactive_color"
                        app:cardCornerRadius="@dimen/_21sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_marginBottom="@dimen/_13sdp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="@string/next"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/exitBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_43sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_bold"
                        android:paddingTop="@dimen/_15sdp"
                        android:text="@string/exit"
                        android:textAlignment="center"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</FrameLayout>