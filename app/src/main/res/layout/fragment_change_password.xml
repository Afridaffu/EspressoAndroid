<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context="com.coyni.android.view.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:src="@drawable/ic_back_arrow"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Change Password"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-10dp"
                android:src="@drawable/ic_settings__shade" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_logout"
                android:drawablePadding="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Logout"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:visibility="gone"></TextView>
        </RelativeLayout>


        <View
            android:id="@+id/viewdiv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"></View>

        <RelativeLayout
            android:id="@+id/layoutHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewdiv"
            android:background="@drawable/transactionscorner">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/cvUpdatePassword"
                android:fillViewport="true"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/tvChangePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Change Password"
                        android:textColor="@color/smsotp"
                        android:textSize="18sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etlOldPwd"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvChangePassword"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:hint="Old Password"
                        android:textColorHint="@color/hintcolor"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@color/status"
                        app:hintTextAppearance="@style/TextLabel"
                        app:hintTextColor="@color/status"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#804C4C4C">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOldPassword"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890.!@#$%^_+-*?/;:'"
                            android:fontFamily="@font/opensans_semibold"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLength="20"
                            android:textColor="@color/headcolor"
                            android:textSize="@dimen/text_size_14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <requestFocus />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etlNewPassword"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etlOldPwd"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:hint="New Password"
                        android:textColorHint="@color/hintcolor"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@color/status"
                        app:hintTextAppearance="@style/TextLabel"
                        app:hintTextColor="@color/status"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#4C4C4C">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNewPassword"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890.!@#$%^_+-*?/;:'"
                            android:fontFamily="@font/opensans_semibold"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLength="20"
                            android:textColor="@color/smsotp"
                            android:textSize="@dimen/text_size_14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvPwdCriteria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etlNewPassword"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_regular"
                                android:text="Password must match following requirements"
                                android:textColor="#979797"
                                android:textSize="10sp"></TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imgNoOfCharacters"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:src="@drawable/ic_close"
                                    android:visibility="invisible"></ImageView>

                                <TextView
                                    android:id="@+id/tvNoOfCharacters"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/opensans_regular"
                                    android:text="( 8-20 ) characters contains"
                                    android:textColor="#4C4C4C"
                                    android:textSize="9sp"></TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imgUpper"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:src="@drawable/ic_close"
                                        android:visibility="invisible"></ImageView>

                                    <TextView
                                        android:id="@+id/tvUpper"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/opensans_regular"
                                        android:text="1 Upper case (A - Z)"
                                        android:textColor="#4C4C4C"
                                        android:textSize="9sp"></TextView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imgNumber"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:src="@drawable/ic_close"
                                        android:visibility="invisible"></ImageView>

                                    <TextView
                                        android:id="@+id/tvNumber"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/opensans_regular"
                                        android:text="1 Number (0 - 9)"
                                        android:textColor="#4C4C4C"
                                        android:textSize="9sp"></TextView>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imgLower"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:src="@drawable/ic_close"
                                        android:visibility="invisible"></ImageView>

                                    <TextView
                                        android:id="@+id/tvLower"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/opensans_regular"
                                        android:text="1 Lower case (a - z)"
                                        android:textColor="#4C4C4C"
                                        android:textSize="9sp"></TextView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imgSpecial"
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:src="@drawable/ic_close"
                                        android:visibility="invisible"></ImageView>

                                    <TextView
                                        android:id="@+id/tvSpecial"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/opensans_regular"
                                        android:text="1 Special character"
                                        android:textColor="#4C4C4C"
                                        android:textSize="9sp"></TextView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etlConfirmPassword"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etlNewPassword"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:hint="Confirm Password"
                        android:textColorHint="@color/hintcolor"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@color/status"
                        app:hintTextAppearance="@style/TextLabel"
                        app:hintTextColor="@color/status">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890.!@#$%^_+-*?/;:'"
                            android:fontFamily="@font/opensans_semibold"
                            android:hint=""
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:maxLength="20"
                            android:textColor="@color/smsotp"
                            android:textSize="@dimen/text_size_14sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <ImageView
                        android:id="@+id/idShape"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etlConfirmPassword"
                        android:layout_marginLeft="-30dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/ic_bottom_shapes" />
                </RelativeLayout>
            </ScrollView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvUpdatePassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/btnback">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="bottom"
                    android:text="Confirm &amp; Save"
                    android:textColor="@color/headcolor"
                    android:textSize="21sp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/viewBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="#141414"
        android:visibility="gone"></View>
</androidx.coordinatorlayout.widget.CoordinatorLayout>