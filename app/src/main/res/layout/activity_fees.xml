<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/et_bg_gray"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context=".view.business.FeesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomradius"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bpbackBtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_43sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/fees"
                android:src="@drawable/ic_back" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_21sdp"
            android:layout_marginBottom="@dimen/_11sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/fees"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_52sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_11sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/transactions"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_12ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/sale_order_token"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/salesOrderDollTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/salesOrderPerTV"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_21sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/refund"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/refundDollTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/refundPerTV"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/token_account"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_12ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/withdraws"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_11ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@color/viewcolor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_21sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/external_bank_account"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/tvEBADoll"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/tvEBAPer"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/instan_pay"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/instantPayDollTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/instantPayPerTV"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/signet_account"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/signetAccDollTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/signetAccPerTV"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/giftcard"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/giftCardDollTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/giftCardPerTV"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/failed_bank_withdraw"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/fdwDollTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/fdwPerTV"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_11sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/buy_token"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_11ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@color/viewcolor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_21sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/external_bank_account"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/buyTokenEBADollTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/buyTokenEBAPerTV"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/signet_account"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/buytokenSignetDollTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/buytokenSignetPerTV"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/other_fees"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_12ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_21sdp"
                            android:layout_marginBottom="@dimen/_23sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_regular"
                                android:singleLine="true"
                                android:text="@string/monthly_fee"
                                android:textColor="@color/xdark_gray"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/monthlyFeeDollTV"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/monthlyFeePerTV"
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_23sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="end"
                                android:singleLine="true"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>