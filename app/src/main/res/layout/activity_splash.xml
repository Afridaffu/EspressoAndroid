<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.coyni.android.view.SplashActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_splash_back"></View>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:src="@drawable/ic_logo"></ImageView>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_splash_logo"></ImageView>

    <LinearLayout
        android:id="@+id/layoutGetStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvGetStarted"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/btnback"
            app:cardCornerRadius="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_semibold"
                android:text="Sign Up"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_18sp"></TextView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_semibold"
            android:text="Login"
            android:textColor="@color/status"
            android:textSize="@dimen/text_size_18sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvSignIn"
            android:layout_width="175dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/btnback"
            app:cardCornerRadius="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_semibold"
                android:text="Login"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_18sp"></TextView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/opensans_regular"
                android:text="Don't Have an Account ? "
                android:textColor="@color/headcolor"
                android:textSize="14sp"></TextView>

            <LinearLayout
                android:id="@+id/layoutSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Sign Up"
                    android:textColor="@color/status"
                    android:textSize="@dimen/text_size_16sp"></TextView>

                <View
                    android:layout_width="58dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/status"></View>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>