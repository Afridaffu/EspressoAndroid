<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"

    >

        <LinearLayout
            android:id="@+id/idveriUnderReviewLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <ImageView
        android:id="@+id/closeBtnUnderReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_21sdp"
        />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_27sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_above="@id/idveriDoneBtn"
                android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_in_progress_icon"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_45sdp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ivtitle"
        android:textSize="@dimen/_16ssp"
        android:layout_marginStart="@dimen/_63sdp"
        android:layout_marginEnd="@dimen/_63sdp"
        android:textColor="@color/primary_black"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_21sdp"
        android:fontFamily="@font/opensans_bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ivunder_review"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/primary_black"
        android:layout_marginLeft="@dimen/_21sdp"
        android:layout_marginRight="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAlignment="center"
        android:fontFamily="@font/opensans_regular"
        />
            </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/idveriDoneBtn"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginEnd="@dimen/_21sdp"
                app:cardBackgroundColor="@color/primary_color"
                app:cardCornerRadius="@dimen/_21sdp"
                android:layout_marginBottom="@dimen/_21sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/done"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/opensans_bold"
                    />
            </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </LinearLayout>






</LinearLayout>