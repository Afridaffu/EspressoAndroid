<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="1dp"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="18dp"
    app:strokeWidth="1.5dp">

    <RelativeLayout
        android:id="@+id/layoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/imgCardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_card"></ImageView>

        <TextView
            android:id="@+id/tvCardNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgCardType"
            android:fontFamily="@font/opensans_semibold"
            android:text=".... 3679"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_15sp"></TextView>

        <ImageView
            android:id="@+id/imgState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/lyMore"
            android:src="@drawable/ic_card_select"></ImageView>

        <LinearLayout
            android:id="@+id/lyMore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_options"></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCardType"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/opensans_semibold"
            android:text="Exp Date : 11/27"
            android:textColor="@color/withdrawopt"
            android:textSize="@dimen/text_size_12sp"></TextView>

        <EditText
            android:id="@+id/etCvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCardType"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/tvExpiry"
            android:fontFamily="@font/opensans_regular"
            android:hint="CVV / CVC"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_12sp"
            android:visibility="gone"></EditText>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>