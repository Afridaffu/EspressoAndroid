<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        >

        <ImageView
            android:id="@+id/imgKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_key"></ImageView>

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imgKey"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Password Expired"
            android:textColor="@color/smsotp"
            android:textSize="@dimen/text_size_14sp"></TextView>


        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/pwdexpire"
            android:textAlignment="center"
            android:textColor="@color/hintcolor"
            android:textSize="@dimen/text_size_10sp"></TextView>

        <TextView
            android:id="@+id/tvSubMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMessage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_regular"
            android:text="Please change your password to access your portal"
            android:textAlignment="center"
            android:textColor="@color/headcolor"
            android:textSize="@dimen/text_size_10sp"></TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@+id/tvSubMsg"
            android:paddingTop="5dp"
            app:cardBackgroundColor="@color/btnback"
            app:cardCornerRadius="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_semibold"
                android:text="Continue"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_16sp"></TextView>
        </androidx.cardview.widget.CardView>

