<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="22dp"
    android:screenReaderFocusable="true"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context=".view.CreateAccountActivity">

    <ImageView
        android:id="@+id/createAccountCloseIV"
        android:layout_width="@dimen/_13sdp"
        android:layout_height="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:src="@drawable/ic_x" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="Create Account"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_16ssp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/firstNameTIL"
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:hint="First Name"
                app:expandedHintEnabled="false"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/primary_green"
                app:hintTextColor="@color/primary_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="First Name"
                    android:inputType="text"
                    android:padding="@dimen/_14sdp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:imeOptions="actionNext"
                    android:maxLength="30"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:hint="Last Name"
                app:expandedHintEnabled="false"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/primary_green"
                app:hintTextColor="@color/primary_green">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastNameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="@dimen/_14sdp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:imeOptions="actionNext"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailTIL"
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:hint="Email"
                app:expandedHintEnabled="false"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/primary_green"
                app:hintTextColor="@color/primary_green"
                app:errorTextColor="@color/error_red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_14sdp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/light_gray"
                    android:imeOptions="actionNext"
                    android:textCursorDrawable="@drawable/cursor_color"/>

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:id="@+id/emailErrorLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_erro" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="User already exists. Try a new email or log in."
                    android:textColor="@color/error_red"
                    android:textSize="@dimen/_10ssp"
                    />
            </LinearLayout>

            <com.greenbox.coyni.utils.outline_et.OutLineBoxPhoneNumberEditText
                android:id="@+id/phoneNumberET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp" />

            <LinearLayout
                android:id="@+id/phoneErrorLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_erro" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="User already exists. Try a new phone number or log in."
                    android:textColor="@color/error_red"
                    android:textSize="@dimen/_10ssp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_14sdp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    app:expandedHintEnabled="false"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/primary_green"
                    app:hintTextColor="@color/primary_green"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:hint="8-12 Characters"
                        android:inputType="textPassword"
                        android:maxLength="12"
                        android:padding="@dimen/_14sdp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_12ssp"
                        android:textColorHint="@color/light_gray"
                        android:imeOptions="actionNext"
                        android:textCursorDrawable="@drawable/cursor_color"/>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/stregnthViewLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    >

                    <View
                        android:id="@+id/stregnthOne"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/error_red"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>
                    <View
                        android:id="@+id/stregnthTwo"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/error_red"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:visibility="invisible"/>
                    <View
                        android:id="@+id/stregnthThree"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/error_red"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:visibility="invisible"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/passwordInfoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:text="Must be 8-12 characters, 1 uppercase, 1 number, 1 lower case, 1 special character."
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:hint="Confirm Password"
                app:expandedHintEnabled="false"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/primary_green"
                app:hintTextColor="@color/primary_green"
                >
<!--                app:passwordToggleEnabled="true"-->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPasswordET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="Confirm Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:padding="@dimen/_14sdp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/_12ssp"
                    android:textColorHint="@color/light_gray"
                    android:textCursorDrawable="@drawable/cursor_color"/>

            </com.google.android.material.textfield.TextInputLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="By clicking next, you agree to "
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tosTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Terms of Service "
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:text="&amp; "
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />


            </LinearLayout>

            <TextView
                android:id="@+id/privacyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:text="Privacy Policy"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_11ssp" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/nextCV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardBackgroundColor="@color/inactive_color"
                app:cardCornerRadius="@dimen/_22sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/opensans_bold" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>