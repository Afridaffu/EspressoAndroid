<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/et_bg_gray"
    tools:context=".view.business.CompanyInfoDetails"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/bottomradius"
        android:orientation="vertical"
        android:paddingStart="@dimen/_21sdp"
        android:paddingTop="@dimen/_45sdp"
        android:paddingBottom="@dimen/_11sdp">

        <LinearLayout
            android:id="@+id/CloseLL"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="Company Information "
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_11sdp"
            android:paddingEnd="@dimen/_11sdp"
            android:background="@drawable/companyinfo_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_xmlid_1"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_26sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Greenboxpos"
                android:fontFamily="@font/opensans_bold"
                android:layout_gravity="center"
                android:textSize="@dimen/_24ssp"
                android:textColor="@color/primary_black"
                android:layout_marginBottom="@dimen/_6sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sole Proprietorship"
                android:fontFamily="@font/opensans_semibold"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/primary_black"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/opensans_bold"
        android:text="Contact Information "
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_11sdp"
            android:paddingRight="@dimen/_11sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:fontFamily="@font/opensans_regular"
            android:text="Email"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:fontFamily="@font/opensans_semibold"
            android:text="Jonathanjostar@gmail.com"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@color/light_gray"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Phone Number"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_7sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="123-456-7890"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@color/light_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Address"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_7sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="3131 Camino Del Rio, San Diego,\nCA, 92108"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rightarrow"
                android:layout_gravity="center"
                />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_17sdp"
                android:background="@color/light_gray"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>