<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/et_bg_gray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ProfileLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dash_bottom_radius"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cardviewProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transac_dashboard_bgimg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_43sdp"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_left_white_chevron" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_21sdp"
                    android:paddingEnd="@dimen/_21sdp">

                    <TextView
                        android:id="@+id/counterNameTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:text="Front Counter 1"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/terminalIDTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:text="TID: 12345678"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/transactionlistFrameFL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp" />
    </LinearLayout>
</layout>