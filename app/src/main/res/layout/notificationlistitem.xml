<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/dateback"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="May 8,2021"
        android:textColor="@color/headcolor"
        android:textSize="@dimen/text_size_14sp"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="Your Instant Pay withdrawal"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_13sp"></TextView>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSubject"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/imgSelect"
                android:fontFamily="@font/opensans_regular"
                android:text="Amount of 100 USD was successfully processed to your debit card ****3456. The Reference ID is R123458"
                android:textColor="@color/hintcolor"
                android:textSize="@dimen/text_size_12sp"></TextView>

            <ImageView
                android:id="@+id/imgSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_noti_check"
                android:visibility="gone"></ImageView>

            <TextView
                android:id="@+id/tvNotiDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvContent"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="07/21/2021  9:00AM"
                android:textColor="@color/hintcolor"
                android:textSize="@dimen/text_size_12sp"></TextView>

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/tvContent"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@drawable/ic_noti_read"></ImageView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>