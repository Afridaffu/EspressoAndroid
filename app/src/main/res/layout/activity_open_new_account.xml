<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_21sdp"
        android:paddingEnd="@dimen/_21sdp">
    <ImageView
        android:id="@+id/backCloseIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_x"
        android:layout_marginTop="@dimen/_44sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open New Account"
            android:fontFamily="@font/opensans_bold"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_65sdp"
            />
        <LinearLayout
            android:id="@+id/newcompanyLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_14sdp"
            android:background="@drawable/bg_white_color_light_blue_border"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_19sdp"
            android:paddingBottom="@dimen/_19sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_6sdp"
                android:src="@drawable/ic_xmlid_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text=""
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newdbaLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_14sdp"
            android:background="@drawable/bg_white_color_light_blue_border"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_19sdp"
            android:paddingBottom="@dimen/_19sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_6sdp"
                android:src="@drawable/ic_dba" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text=""
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>