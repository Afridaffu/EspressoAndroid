<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btmshet_top_radius"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_3sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_22sdp"
        android:background="@drawable/shape_green_round_rect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_22sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="DBA Information"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_26sdp"
            android:fontFamily="@font/opensans_semibold"
            android:text="Is your DBA information the same as your\ncompany information?"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_27sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/diffLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_green_round_rect_core"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingTop="@dimen/_13sdp"
                android:paddingRight="@dimen/_30sdp"
                android:paddingBottom="@dimen/_13sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:text="Different"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sameLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_weight="1"
                android:background="@drawable/shape_green_round_rect"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_42sdp"
                android:paddingTop="@dimen/_13sdp"
                android:paddingRight="@dimen/_42sdp"
                android:paddingBottom="@dimen/_13sdp">

                <TextView
                    android:id="@+id/sameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:text="Same"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>