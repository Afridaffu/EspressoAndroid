<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_27sdp"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context=".view.ConfirmPasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/cardNextbtn"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_45sdp"
        android:paddingStart="@dimen/_21sdp"
        android:paddingBottom="@dimen/_14sdp">

        <ImageView
            android:id="@+id/cpConfirmBackIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:fontFamily="@font/opensans_bold"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_21sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="As a security measure, you will be logged out of your account once you successfully change your password. "
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:fontFamily="@font/opensans_regular"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/primary_black"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/currentPassTIL"
        style="@style/TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginEnd="@dimen/_21sdp"
        android:hint="Current Password"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/primary_green"
        app:errorTextColor="@color/error_red"
        app:passwordToggleEnabled="true"
        app:expandedHintEnabled="false"
        app:hintTextColor="@color/primary_green"
        app:errorIconDrawable="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/currentPassET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:hint="8-12 Characters"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="@dimen/_14sdp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/light_gray"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="@dimen/_12ssp"
            android:longClickable="false"
            android:maxLength="12"
            android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890!@#$%*?"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/cardNextbtn"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/_48sdp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/saveBtnCV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginEnd="@dimen/_21sdp"
            android:layout_marginStart="@dimen/_21sdp"
            app:cardBackgroundColor="@color/inactive_color"
            app:cardCornerRadius="@dimen/_21sdp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Next"
              android:paddingTop="@dimen/_14sdp"
              android:textSize="@dimen/_12ssp"
              android:textColor="@color/white"
              android:fontFamily="@font/opensans_bold"
              android:textAlignment="center"
              android:gravity="center"
              />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>