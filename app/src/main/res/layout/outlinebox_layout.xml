<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/hintdHolderLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_box_unfocused"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outLineTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="#FFF"
            app:boxBackgroundColor="#FFF">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/outLineEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="14dp"
                android:background="@android:color/transparent"
                android:textColor="@color/primary_black"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/text_size_13sp"
                android:singleLine="true"
                android:maxLines="1"
                android:textCursorDrawable="@drawable/cursor_color"
                android:fontFamily="@font/opensans_regular"/>
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:id="@+id/stregnthViewLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <View
                android:id="@+id/stregnthOne"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/error_red"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <View
                android:id="@+id/stregnthTwo"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/error_red"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:visibility="invisible"/>
            <View
                android:id="@+id/stregnthThree"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/error_red"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/hintTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textSize="@dimen/text_size_10sp"
        android:textColor="@color/primary_black"
        app:layout_constraintBottom_toTopOf="@+id/hintdHolderLL"
        app:layout_constraintStart_toStartOf="@+id/hintdHolderLL"
        app:layout_constraintTop_toTopOf="@+id/hintdHolderLL" />

</androidx.constraintlayout.widget.ConstraintLayout>