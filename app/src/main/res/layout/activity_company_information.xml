            <com.greenbox.coyni.utils.outline_et.SSNOutlineBoxNumberEditText
                android:layout_marginTop="@dimen/_14sdp"
                android:id="@+id/SsnOET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp">
                <ImageButton
                    android:id="@+id/timezoneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/ic_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/timezoneTIL"
                    app:layout_constraintHorizontal_bias="0.952"
                    app:layout_constraintStart_toStartOf="@+id/timezoneTIL"
                    app:layout_constraintTop_toTopOf="@+id/timezoneTIL"
                    app:layout_constraintVertical_bias="0.507"
                    app:layout_editor_absoluteX="336.24dp"
                    app:layout_editor_absoluteY="26.28dp"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/timezoneTIL"
                    style="@style/TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Time Zone"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/primary_green"
                    app:errorIconDrawable="@null"
                    app:expandedHintEnabled="false"
                    app:hintTextColor="@color/primary_green"
                    tools:ignore="MissingConstraints">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/timezoneET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:fontFamily="@font/opensans_semibold"
                        android:hint="Select time zone"
                        android:imeOptions="actionNext"
                        android:inputType="text|textNoSuggestions"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_14sdp"
                        android:privateImeOptions="disableSticker=true;disableGifKeyboard=true"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/light_gray"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/_12ssp" />

                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By selecting this we will clear your batch based on\nyour time zone at 11:59:59pm."
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_45sdp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/nextCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/inactive_color"
                app:cardCornerRadius="@dimen/_33sdp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_13sdp"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </androidx.cardview.widget.CardView>

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved automatically"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_39sdp"
                />
