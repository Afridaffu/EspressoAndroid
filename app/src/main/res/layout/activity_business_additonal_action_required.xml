<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_100sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_21sdp"
                android:paddingEnd="@dimen/_19sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_44sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:src="@drawable/ic_x" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Additional Action Required"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Thank you for your interest in coyni. After\nreviewing your account. The coyni team requires\n you to upload the following documentation\nwithin 30 days to continue account verification."
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/at_gray"
                android:fontFamily="@font/opensans_bold"
                android:paddingStart="@dimen/_21sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_21sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/documents_required"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_21sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_21sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/copy_of_social_security_card"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/bg_white_color_light_border"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_14sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_upload" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/upload_file"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="3 Months Recent Merchant Processing\nStatements (if currently accepting credit/debit \ntransactions)"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/bg_white_color_light_border"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_14sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_upload" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/upload_file"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/fictitious_business_license"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:background="@drawable/bg_white_color_light_border"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_14sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_upload" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/upload_file"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/at_gray"
                android:fontFamily="@font/opensans_bold"
                android:paddingStart="@dimen/_21sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_21sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/website_revisions_required"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/_21sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_21sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/please_accept_or_decline_the_revision_suggestion"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11ssp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/at_gray"
                android:fontFamily="@font/opensans_bold"
                android:paddingStart="@dimen/_21sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_21sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/information_revisions"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="@string/please_accept_or_decline_the_revision_suggestion"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11ssp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_100sdp"
                    app:cardCornerRadius="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_color"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_11sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_32sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="@string/company_name"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_11ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_32sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/prestige_worldwide"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/original"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_32sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:orientation="horizontal"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/prestige_worldwide_inc"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/edited"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_11sdp"
                            android:layout_marginEnd="@dimen/_11sdp"
                            android:layout_marginBottom="@dimen/_17sdp"
                            android:background="@color/dark_color_bg" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/lorem_ipsum_dolor_sit_amet_consectetuer_adipiscing_elit_aenean_commodo_ligula_eget_dolor_aenean_massa"
                            android:textColor="@color/dark_grey"
                            android:layout_marginStart="@dimen/_11sdp"
                            android:layout_marginEnd="@dimen/_11sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:textSize="@dimen/_10ssp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_green_round_rect_core"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_30sdp"
                                android:paddingTop="@dimen/_13sdp"
                                android:paddingEnd="@dimen/_30sdp"
                                android:paddingBottom="@dimen/_13sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_bold"
                                    android:gravity="center"
                                    android:text="Decline"
                                    android:textColor="@color/primary_color"
                                    android:textSize="@dimen/_12ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_green_round_rect"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_42sdp"
                                android:paddingTop="@dimen/_13sdp"
                                android:paddingEnd="@dimen/_42sdp"
                                android:paddingBottom="@dimen/_13sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_bold"
                                    android:gravity="center"
                                    android:text="Accept"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11ssp" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                app:cardBackgroundColor="@color/inactive_color"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_22sdp"
                app:cardCornerRadius="@dimen/_33sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:paddingTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_13sdp"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_27sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/saved_automatically"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_11ssp" />
</LinearLayout>
</RelativeLayout>
</LinearLayout>