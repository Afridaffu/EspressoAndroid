<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_11ssp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:text="Sent to business token account"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/payoutMoneyTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="right"
                    android:text="6,435.21"
                    android:textColor="@color/active_green"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/paidTV"
                    android:layout_width="@dimen/_68sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@drawable/fill_grn_color_smallradius"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:text="Paid"
                    android:textColor="@color/active_green"
                    android:textSize="@dimen/_7ssp" />

                <TextView
                    android:id="@+id/payoutDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="right"
                    android:text="06/23/2021 @ 2:20am"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/blue_light" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

