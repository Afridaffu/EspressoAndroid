<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.PINActivity"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <LinearLayout
        android:id="@+id/choosePINLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomKeyPad"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="67dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Choose your PIN"
            android:textAlignment="center"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/text_size_24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="79dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_outline_circle"
                android:gravity="center">

                <View
                    android:id="@+id/chooseCircleOne"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_outline_circle"
                android:gravity="center">

                <View
                    android:id="@+id/chooseCircleTwo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_outline_circle"
                android:gravity="center">

                <View
                    android:id="@+id/chooseCircleThree"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_outline_circle"
                android:gravity="center">

                <View
                    android:id="@+id/chooseCircleFour"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_outline_circle"
                android:gravity="center">

                <View
                    android:id="@+id/chooseCircleFive"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_outline_circle"
                android:gravity="center">

                <View
                    android:id="@+id/chooseCircleSix"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="6dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Forgot PIN"
            android:textColor="@color/primary_green"
            android:textSize="@dimen/text_size_18sp"
            android:visibility="gone"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomKeyPad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keyOneTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/keyTwoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/keyThreeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="3"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keyFourTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/keyFiveTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/keySixTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="6"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keySevenTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="7"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/keyEightTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="8"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/keyNineTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="9"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/keyZeroTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_keyboard_key_bg"
                android:fontFamily="@font/opensans_bold"
                android:padding="20dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_16sp" />

            <ImageView
                android:id="@+id/backActionIV"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:src="@drawable/ic_outline_backspace"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>