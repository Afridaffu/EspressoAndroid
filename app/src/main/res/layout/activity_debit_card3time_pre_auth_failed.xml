<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_failed"
        android:layout_marginTop="@dimen/_102sdp"
        android:layout_marginLeft="@dimen/_64sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Failed"
        android:gravity="center"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/opensans_bold"
        android:layout_marginBottom="@dimen/_21sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_59sdp"
        android:textSize="@dimen/_12ssp"
        android:text="he amount you have entered is incorrect. If \nyou wish to continue, please add an\n
external bank account."
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/nextCV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:cardBackgroundColor="#00a6a2"
        android:gravity="center"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_194sdp"
        >
        <TextView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Bank Account"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>