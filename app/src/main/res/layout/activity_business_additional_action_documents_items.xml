<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/documentRequired"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:padding="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvdocumentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    android:id="@+id/sscFileUploadLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_white_color_light_border"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_14sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_upload" />

                    <TextView
                        android:id="@+id/sscuploadFileTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/upload_file"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_9ssp" />

                    <LinearLayout
                        android:id="@+id/sscfileUploadedLL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Uploaded"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_10ssp" />

                            <TextView
                                android:id="@+id/sscfileUpdatedOnTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opensans_regular"
                                android:text=""
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_8ssp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:gravity="right"
                            android:src="@drawable/ic_complete"
                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingTop="@dimen/_10ssp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/websiteCheckBox"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkboxCB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/primary_black"
                        android:theme="@style/AppTheme" />

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/tvheading"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_regular"
                        android:text="@string/footer_full_legal_name_as_it"
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDescription"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="@string/Footer"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/imgWebsite"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:src="@drawable/dba_backimg" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/informationChange"
                android:layout_width="match_parent"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingTop="@dimen/_10ssp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_color"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_11sdp">

                        <LinearLayout
                            android:id="@+id/acceptDneLL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="0dp"
                                android:id="@+id/imvAccepttick"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:src="@drawable/ic_active_complete" />

                            <TextView
                                android:id="@+id/comapny_nameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/company_name"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>

<!--                        <LinearLayout-->
<!--                            android:id="@+id/declineDneLL"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginStart="@dimen/_7sdp"-->
<!--                            android:layout_weight="1"-->
<!--                            android:orientation="horizontal"-->
<!--                            android:visibility="visible">-->

<!--                            <ImageView-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_marginEnd="@dimen/_6sdp"-->
<!--                                android:layout_weight="1"-->
<!--                                android:src="@drawable/ic_decline" />-->

<!--                            <TextView-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_marginBottom="@dimen/_8sdp"-->
<!--                                android:fontFamily="@font/opensans_semibold"-->
<!--                                android:text=""-->
<!--                                android:textColor="@color/dark_grey"-->
<!--                                android:textSize="@dimen/_11ssp" />-->
<!--                        </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_32sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/comapnyNameOriginal"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text=""
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/original"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_32sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/comapnyNamePropesed"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text=""
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/edited"
                                android:textColor="@color/primary_color"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_11sdp"
                            android:layout_marginEnd="@dimen/_11sdp"
                            android:layout_marginBottom="@dimen/_17sdp"
                            android:background="@color/dark_color_bg" />


                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/tvMessage"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_11sdp"
                            android:layout_marginEnd="@dimen/_11sdp"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:text=""
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_10ssp" />

                        <LinearLayout
                            android:id="@+id/acceptDeclineLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/declineLL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_green_round_rect_core"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_30sdp"
                                android:paddingTop="@dimen/_13sdp"
                                android:paddingEnd="@dimen/_30sdp"
                                android:paddingBottom="@dimen/_13sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_bold"
                                    android:gravity="center"
                                    android:text="Decline"
                                    android:textColor="@color/primary_color"
                                    android:textSize="@dimen/_12ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/acceptLL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_green_round_rect"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_42sdp"
                                android:paddingTop="@dimen/_13sdp"
                                android:paddingEnd="@dimen/_42sdp"
                                android:paddingBottom="@dimen/_13sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/opensans_bold"
                                    android:gravity="center"
                                    android:text="Accept"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/acceptMsgTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_bold"
                            android:text="@string/Accepted"
                            android:textColor="@color/active_green"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/declineMsgTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensans_bold"
                            android:text="@string/Decline"
                            android:textColor="@color/error_red"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/remarksTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:text=""
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>



    </ScrollView>

</LinearLayout>