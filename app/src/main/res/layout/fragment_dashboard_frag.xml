<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/FirstFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/et_bg_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f9fbfd"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_21sdp">

                        <TextView
                            android:id="@+id/tvTerminalName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:gravity="center"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_16ssp" />

                        <TextView
                            android:id="@+id/terminalID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_21sdp"
                            android:background="@color/button_bg" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/startSaleLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_32sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:background="@drawable/corecircle2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginTop="@dimen/_27sdp"
                            android:background="@drawable/image_bg"
                            android:padding="@dimen/_25sdp"
                            android:src="@drawable/register_img" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginBottom="@dimen/_25sdp"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="center"
                            android:text="Start New Sale"
                            android:textColor="@color/primary_green"
                            android:textSize="@dimen/_16ssp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/todayBatchCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:padding="@dimen/_19sdp"
                    android:text="View Todayâ€™s Batch"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_12ssp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</layout>