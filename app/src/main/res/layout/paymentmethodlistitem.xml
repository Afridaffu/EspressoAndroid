<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutBack"
    android:layout_marginBottom="@dimen/_11sdp"
    android:background="@drawable/ic_activebank"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgBankIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@drawable/ic_bankactive"></ImageView>

    <TextView
        android:id="@+id/tvBankHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_toRightOf="@+id/imgBankIcon"
        android:fontFamily="@font/opensans_semibold"
        android:text="Bank Account"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"></TextView>

    <TextView
        android:id="@+id/tvBankExpire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_toRightOf="@+id/tvBankHead"
        android:fontFamily="@font/opensans_semibold"
        android:text="Issue"
        android:textColor="@color/error"
        android:textSize="@dimen/_11ssp"></TextView>

    <LinearLayout
        android:id="@+id/layoutBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBankHead"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_toRightOf="@+id/imgBankIcon"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Bank of America"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"></TextView>

        <TextView
            android:id="@+id/tvAccNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/opensans_semibold"
            android:text="••••5359"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBankHead"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_toRightOf="@+id/imgBankIcon"
        android:fontFamily="@font/opensans_semibold"
        android:text="4538 32••••2338"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"></TextView>

</RelativeLayout>