<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="7dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_signet_account"></ImageView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvBankHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgBank"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:singleLine="true"
                android:text="Signet Wallet ID"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_15sp"></TextView>

            <TextView
                android:id="@+id/tvBankId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tvBankHead"
                android:layout_weight="1.1"
                android:fontFamily="@font/opensans_regular"
                android:gravity="right"
                android:text="3F%28HSBS..."
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_14sp"></TextView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="Benedict Cumberbacht"
                android:textColor="@color/headcolor"
                android:textSize="@dimen/text_size_13sp"></TextView>

            <LinearLayout
                android:id="@+id/lyMore"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more_options"></ImageView>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:text="M8 8LG, 165, Cheetham Hill Road\nManchester, UK"
            android:textColor="@color/withdrawopt"
            android:textSize="@dimen/text_size_12sp"></TextView>

    </LinearLayout>
</androidx.cardview.widget.CardView>