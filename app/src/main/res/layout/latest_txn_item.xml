<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingStart="@dimen/_11sdp"
    android:paddingRight="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/latestmessageTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:layout_weight=".65"
            android:textColor="@color/primary_black"
            android:visibility="visible"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:text="Buy Tokens from Card "
            android:textSize="@dimen/_11ssp"
            />

        <TextView
            android:id="@+id/latestmessagTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:singleLine="true"
            android:layout_weight=".3"
            android:gravity="start"
            android:text=" **1234"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_11ssp"
            android:visibility="visible"/>

<!--        <TextView-->
<!--            android:id="@+id/txnDescTV"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:fontFamily="@font/opensans_semibold"-->
<!--            android:text="Send funds from Alison L"-->
<!--            android:textColor="@color/primary_black"-->
<!--            android:textSize="@dimen/_11ssp"-->
<!--            android:singleLine="true"-->
<!--            android:ellipsize="end"/>-->

        <TextView
            android:id="@+id/amountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="-100,0000,000"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp"
            android:gravity="right"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/opensans_semibold"
            android:text=""
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/statusLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@drawable/txn_pending_bg"
            android:visibility="visible">

            <TextView
                android:id="@+id/statusTV"
                android:layout_width="@dimen/_68sdp"
                android:layout_height="@dimen/_14sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="Pending"
                android:gravity="center"
                android:textColor="#FFA701"
                android:textSize="@dimen/_7ssp" />

        </LinearLayout>

        <TextView
            android:id="@+id/balanceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/opensans_semibold"
            android:text="Balance 1,00,000.00"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_10ssp"
            android:layout_weight="1"
            android:gravity="right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/balanceTV"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/blue_light" />
</LinearLayout>