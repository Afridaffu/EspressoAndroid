<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_21sdp"
        android:paddingTop="@dimen/_45sdp"
        android:paddingBottom="@dimen/_13sdp">

        <LinearLayout
            android:id="@+id/closeLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/closeIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_x" />

        </LinearLayout>


        <TextView
            android:id="@+id/agreNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:fontFamily="@font/opensans_semibold"
            android:layout_gravity="center"
            android:text="Agreement"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />

        <ImageView
            android:id="@+id/optionsIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_17sdp"
            android:src="@drawable/ic_options" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@drawable/bg_core_grey"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_11sdp"
        android:paddingVertical="@dimen/_7sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_info_sign" />

        <TextView
            android:id="@+id/infoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_regular"
            android:text="Please take time to read then agree to the coyniâ€™s Terms of Service."
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:nestedScrollingEnabled="true"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/bottomLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/agreeCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-5dp"
                android:enabled="false"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/primary_black"
                android:theme="@style/AppTheme" />

            <TextView
                android:id="@+id/accknowledgeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="By clicking this box, I acknowledge I have read and agree to the Privacy Policy."
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_11ssp"
                android:visibility="visible" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/actionCV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/inactive_color"
            app:cardCornerRadius="@dimen/_22sdp">

            <TextView
                android:id="@+id/actionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>