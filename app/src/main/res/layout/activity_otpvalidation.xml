<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="22dp"
    tools:context=".view.OTPValidation"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <LinearLayout
        android:id="@+id/layoutEntry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/otpValidationCloseIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/headerTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/opensans_bold"
            android:text="Please Verify Your Phone Number"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/subHeaderTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/opensans_regular"
            android:text="We sent you 6-digit code to the register phone number (661) 726-0369"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/text_size_12sp" />

        <com.greenbox.coyni.utils.otpview.PinView
            android:id="@+id/otpPV"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:cursorVisible="false"
            android:fontFamily="@font/opensans_regular"
            android:hint="12346"
            android:inputType="number"
            android:textColor="@color/primary_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorColor="@color/primary_color"
            app:cursorWidth="0dp"
            app:hideLineWhenFilled="false"
            app:itemCount="6"
            app:itemRadius="6dp"
            app:itemSpacing="5dp"
            app:lineColor="@color/line_colors"
            app:lineWidth="2dp"
            app:viewType="rectangle"
            app:itemHeight="58dp"
            app:itemWidth="48dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center"
            android:text="Didn't get the code?"
            android:textColor="@color/primary_black"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/resendTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text="Resend"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/newCodeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text="A new code has sent"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutFailure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/activity_retry_create_account" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/secureAccountRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/secureNextCV"
            android:layout_alignParentTop="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secure Your Account"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginBottom="21dp"
                android:layout_marginTop="72dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One way we keep your account secure is with 2- step verification, which requires you to create 6-digit PIN"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/primary_black"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginBottom="40dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_secure_account"
                android:layout_gravity="bottom"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/secureNextCV"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="@color/primary_color"
            app:cardCornerRadius="22dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
</LinearLayout>