<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.IdentityVerificationActivity"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    >

    <LinearLayout
        android:id="@+id/topbarll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="54dp">

        <ImageButton
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="67dp"
            android:layout_marginBottom="13.8dp"
            android:background="@color/white"
            android:src="@drawable/ic_close"
            android:visibility="visible"
            app:tint="@color/black" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="67dp"
            android:layout_marginBottom="13.8dp"
            android:background="@color/white"
            android:src="@drawable/ic_back"
            android:visibility="gone"
            app:tint="@color/black" />

        <View
            android:id="@+id/viewBarLeft"
            android:layout_width="80dp"
            android:layout_height="3.3dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="18.7dp"
           android:layout_weight="1"
            android:background="@color/primary_color" />

        <View
            android:id="@+id/viewBarRight"
            android:layout_width="80dp"
            android:layout_height="3.3dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="74dp"
            android:layout_marginBottom="18.7dp"
            android:layout_weight="1"
            android:background="@color/viewcolor" />

    </LinearLayout>

    <TextView
        android:id="@+id/identityTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_size_22sp"
        android:fontFamily="sans-serif"
        android:text="@string/identity"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrlViewIV1st"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linearLayoutIdVe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_21sp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/text_size_22sp"
            android:paddingTop="14dp">

            <TextView
                android:id="@+id/upidentityTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/uploadid"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/text_size_12sp" />


            <LinearLayout
                android:id="@+id/clickBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18.7dp"
                android:background="@drawable/card_background">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_upload_id" />


                <TextView
                    android:id="@+id/idveriUpIdTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/opensans_regular"
                    android:lineSpacingExtra="6sp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:text="@string/contentuploadid"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/text_size_11sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/idveriUpIdSuccessTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/opensans_regular"
                    android:lineSpacingExtra="6.7sp"
                    android:layout_weight="1"
                    android:text="@string/contentuploadidsuccess"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/text_size_12sp"
                    android:visibility="gone"
                    android:textStyle="normal" />
                <ImageView
                    android:id="@+id/idveriUpIdSuccessImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_complete"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="26dp"
                    android:visibility="gone"
                    />



            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idveriSSNTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_20sp"
                android:hint="@string/ssnlast"
                android:textColorHint="@color/primary_black"
                app:boxCornerRadiusBottomEnd="@dimen/margintop_10dp"
                app:boxCornerRadiusBottomStart="@dimen/margintop_10dp"
                app:boxCornerRadiusTopEnd="@dimen/margintop_10dp"
                app:boxCornerRadiusTopStart="@dimen/margintop_10dp"
                app:boxStrokeColor="@color/primary_color"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/primary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idVeriSSNET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="@string/ssnlast"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"

                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_12sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/idveriDOBCL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21sp">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:src="@drawable/ic_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/idveriDOBTIL"
                    app:layout_constraintHorizontal_bias="0.952"
                    app:layout_constraintStart_toStartOf="@+id/idveriDOBTIL"
                    app:layout_constraintTop_toTopOf="@+id/idveriDOBTIL"
                    app:layout_constraintVertical_bias="0.507"
                    app:layout_editor_absoluteX="336.24dp"
                    app:layout_editor_absoluteY="26.28dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idveriDOBTIL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:hint="@string/dobol"

                    android:textColorHint="@color/black"
                    app:boxCornerRadiusBottomEnd="10sp"
                    app:boxCornerRadiusBottomStart="10sp"
                    app:boxCornerRadiusTopEnd="10sp"
                    app:boxCornerRadiusTopStart="10sp"
                    app:boxStrokeColor="@color/primary_color"
                    app:expandedHintEnabled="false"
                    app:hintTextColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/idveriDOBET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:fontFamily="@font/opensans_semibold"
                        android:hint="@string/dobhint"
                        android:imeOptions="actionDone"
                        android:inputType="none"
                        android:maxLength="30"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp" />


                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="178dp"
                app:cardBackgroundColor="@color/inactive_color"
                app:cardCornerRadius="21dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_bold"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"

                    android:text="@string/next"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/exitBtn"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="56dp"
                android:background="@drawable/exitbtnbackgroundcolor"
                android:fontFamily="@font/opensans_bold"
                android:paddingTop="15dp"
                android:text="@string/exit"
                android:textAlignment="center"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/scrlViewIV2nd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linearLayoutIdVeNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/opensans_regular"
                android:text="@string/identityInstruction"
                android:textColor="@color/primary_black"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mailingAddTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:hint="@string/mailingaddress1"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10sp"
                app:boxCornerRadiusTopStart="10sp"
                app:boxStrokeColor="@color/primary_color"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mailingAddET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="@string/mailingaddresshint"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mailingAddlineoptTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:hint="@string/mailingaddress2"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10sp"
                app:boxCornerRadiusTopStart="10sp"
                app:boxStrokeColor="@color/primary_color"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mailingAddlineoptET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="@string/mailingaddresshint2"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cityTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:hint="@string/city"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10sp"
                app:boxCornerRadiusTopStart="10sp"
                app:boxStrokeColor="@color/primary_color"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cityET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="@string/cityhint"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21sp">

                <ImageButton
                    android:id="@+id/stateimg"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_down"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/stateTIL"
                    app:layout_constraintHorizontal_bias="0.952"
                    app:layout_constraintStart_toStartOf="@+id/stateTIL"
                    app:layout_constraintTop_toTopOf="@+id/stateTIL"
                    app:layout_constraintVertical_bias="0.507"
                    app:layout_editor_absoluteX="336.24dp"
                    app:layout_editor_absoluteY="26.28dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/stateTIL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/state"
                    android:textColorHint="@color/black"
                    app:boxCornerRadiusBottomEnd="10sp"
                    app:boxCornerRadiusBottomStart="10sp"
                    app:boxCornerRadiusTopEnd="10sp"
                    app:boxCornerRadiusTopStart="10sp"
                    app:boxStrokeColor="@color/primary_color"
                    app:expandedHintEnabled="false"
                    app:hintTextColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/stateET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/opensans_semibold"
                        android:hint="@string/statehint"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="30"
                        android:padding="14dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                </com.google.android.material.textfield.TextInputLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/zipcodeTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:hint="@string/zip"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/primary_color"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/zipcodeET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="@string/ziphint"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/countryTIL"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:hint="@string/country"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10sp"
                app:boxCornerRadiusTopStart="10sp"
                app:boxStrokeColor="@color/primary_color"
                app:expandedHintEnabled="false"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/countryET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_semibold"
                    android:hint="@string/countryhint"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="30"
                    android:padding="14dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/inactive_color"
                app:cardCornerRadius="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/submitbtn"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/btnExit"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginBottom="56dp"
                android:background="@drawable/exitbtnbackgroundcolor"
                android:fontFamily="@font/opensans_bold"
                android:paddingTop="15dp"
                android:text="@string/exitbtn"
                android:textAlignment="center"
                android:textColor="@color/primary_color"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>