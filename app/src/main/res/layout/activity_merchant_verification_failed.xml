<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_21sdp"
        android:paddingEnd="@dimen/_21sdp"
        tools:ignore="UselessParent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_x"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_failed"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_20sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Merchant Application \nVerification Failed"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center"
            android:textColor="@color/primary_black"
            android:layout_marginBottom="@dimen/_24sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="@dimen/_16ssp"
            android:text="We were unable to verify your business account\nbecause of an issue with your bank account.\nPlease try again or try a different bank account"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/primary_black"

            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/primary_color"
            app:cardCornerRadius="@dimen/_33sdp"
            android:layout_marginTop="@dimen/_150sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center"
                android:paddingTop="@dimen/_13sdp"
                android:paddingBottom="@dimen/_13sdp"
                android:text="@string/try_again"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>