<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_13sdp"
            android:src="@drawable/ic_chevron_left"
            android:layout_marginTop="@dimen/_40sdp"
            />
        <View
            android:layout_width="@dimen/_83sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="#3700BCD4"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_26sdp"
            android:layout_marginBottom="@dimen/_28sdp"
            />
        <View
            android:layout_width="@dimen/_83sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/primary_color"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_28sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Debit Card"
        android:fontFamily="@font/opensans_bold"
        android:textSize="@dimen/_16ssp"
        android:layout_marginTop="@dimen/_14sdp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please confirm your billing address"
        android:textSize="@dimen/_12ssp"
        android:layout_marginBottom="@dimen/_18sdp"
        />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_14sdp">

                <LinearLayout
                    android:id="@+id/hintdHolder1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/outline_box_unfocused"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="3131 Camino Del Rio North "
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/hintTV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/opensans_semibold"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Biling Address Line 1"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toTopOf="@+id/hintdHolder1"
                    app:layout_constraintStart_toStartOf="@+id/hintdHolder1"
                    app:layout_constraintTop_toTopOf="@+id/hintdHolder1" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_14sdp">

                <LinearLayout
                    android:id="@+id/hintdHolde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/outline_box_unfocused"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Suite 1400"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/hintTV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/opensans_semibold"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Biling Address Line 2(Optional)"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toTopOf="@+id/hintdHolde"
                    app:layout_constraintStart_toStartOf="@+id/hintdHolde"
                    app:layout_constraintTop_toTopOf="@+id/hintdHolde" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_14sdp">

                <LinearLayout
                    android:id="@+id/hintdHolderll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/outline_box_unfocused"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="San Diego"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/hintTVV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/opensans_semibold"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="City"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toTopOf="@+id/hintdHolderll"
                    app:layout_constraintStart_toStartOf="@+id/hintdHolderll"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_14sdp">

                <LinearLayout
                    android:id="@+id/hintdHolderLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/outline_box_unfocused"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="CA"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/hintTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/opensans_semibold"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="State"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toTopOf="@+id/hintdHolderLL"
                    app:layout_constraintStart_toStartOf="@+id/hintdHolderLL"
                    app:layout_constraintTop_toTopOf="@+id/hintdHolderLL" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_9sdp"
                    android:src="@drawable/ic_chevron_down"
                    app:layout_constraintBottom_toBottomOf="@+id/hintdHolderLL"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/hintdHolderLL" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_14sdp">

                <LinearLayout
                    android:id="@+id/hintdHolderL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/outline_box_unfocused"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="92108"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/hintTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/opensans_semibold"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Zipcode"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toTopOf="@+id/hintdHolderL"
                    app:layout_constraintStart_toStartOf="@+id/hintdHolderL"
                    app:layout_constraintTop_toTopOf="@+id/hintdHolderL" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_14sdp">

                <LinearLayout
                    android:id="@+id/hintdHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/outline_box_unfocused"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:text="United States"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/hintT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:fontFamily="@font/opensans_semibold"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Country"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintBottom_toTopOf="@+id/hintdHolder"
                    app:layout_constraintStart_toStartOf="@+id/hintdHolder"
                    app:layout_constraintTop_toTopOf="@+id/hintdHolder" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/nextCV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/primary_color"
            android:gravity="center"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="@dimen/_43sdp"
            >
            <TextView
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Card"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/opensans_bold"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>

</LinearLayout>