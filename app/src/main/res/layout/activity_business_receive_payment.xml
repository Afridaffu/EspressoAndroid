<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.BusinessReceivePaymentActivity">

    <LinearLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomradius"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:paddingStart="@dimen/_11sdp"
        android:paddingEnd="@dimen/_1sdp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/receivePaymentLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_45sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Receive Payment"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginBottom="@dimen/_11sdp"
            android:textColor="@color/black"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHead"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_20sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvQRcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_24sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfile"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_20sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvUserInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans_semibold"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/text_size_20sp" />


                            <ImageView
                                android:id="@+id/imgProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cvProfile"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text=""
                        android:textColor="@color/primary_black"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_below="@id/tvName"
                        android:layout_marginStart="@dimen/_11sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_11sdp"
                        android:visibility="gone"
                        android:background="@color/viewcolor" />

                    <TextView
                        android:id="@+id/messageQr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/viewLine"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Set amount to request a payment or scan QR\n code to pay."
                        android:textAlignment="center"
                        android:textColor="@color/xdark_gray"
                        android:textSize="@dimen/_11ssp" />

                    <RelativeLayout
                        android:id="@+id/qrViewRL"
                        android:layout_width="@dimen/_146sdp"
                        android:layout_height="@dimen/_144sdp"
                        android:layout_below="@+id/messageQr"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@drawable/ic_qr_img_outline">

                        <ImageView
                            android:id="@+id/b_idIVQrcode"
                            android:layout_width="@dimen/_142sdp"
                            android:layout_height="@dimen/_140sdp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/qr_code"
                            android:padding="@dimen/_3sdp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/scanAmountLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/qrViewRL"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:gravity="center"
                        android:layout_marginBottom="-20dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/scanMeRequestAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_bold"
                            android:text="160.00"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_34sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:fontFamily="@font/opensans_bold"
                            android:text="CYN"
                            android:textColor="@color/primary_black"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/scanAmountLL"
                        android:layout_marginTop="@dimen/_27sdp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/scanMesetAmountTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Set Amount"
                                android:textColor="@color/primary_green"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/saveToAlbumTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Save to Album"
                                android:textColor="@color/primary_green"
                                android:textSize="@dimen/_12ssp" />
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvQRcode"
                android:layout_marginLeft="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_11sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Recipient’s Address"
                        android:textColor="@color/xdark_gray"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/b_tvWalletAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text=""
                        android:textColor="#404040"
                        android:textSize="@dimen/_10ssp" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:background="@color/at_gray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:paddingStart="@dimen/_36sdp">

                        <LinearLayout
                            android:id="@+id/lyCopy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgCopy"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:src="@drawable/ic_copy" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgCopy"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Copy"
                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_centerInParent="true"
                            android:background="@color/vlight_gray" />

                        <LinearLayout
                            android:id="@+id/lyShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_35sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgShare"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:src="@drawable/ic_share" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgShare"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="Share"

                                android:textColor="@color/primary_black"
                                android:textSize="@dimen/_11ssp" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/b_saveToAlbumLL"
        android:layout_width="@dimen/_286sdp"
        android:layout_height="wrap_content"
        android:background="@color/primary_green"
        android:orientation="vertical"
        android:paddingTop="@dimen/_26sdp"
        android:paddingBottom="@dimen/_56sdp"
        android:visibility="invisible">

        <ImageView
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_coyni_logo_full_white" />

        <LinearLayout
            android:layout_width="@dimen/_264sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_marginEnd="@dimen/_11sdp"
            android:background="@drawable/saveimagebg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_22sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_34sdp"
                android:layout_height="@dimen/_34sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_11sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_17sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/saveprofileIV"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/saveprofileTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_color_bg"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text="df"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvNameSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text=""
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_11sdp"
                android:background="@color/vlight_gray" />

            <LinearLayout
                android:id="@+id/setAmountLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tvsaveSetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="160.00"
                    android:textColor="@color/primary_green"
                    android:textSize="@dimen/_24ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center"
                    android:text="CYN"
                    android:textColor="@color/primary_black"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_144sdp"
                android:layout_height="@dimen/_144sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/ic_qr_img_outline">

                <ImageView
                    android:id="@+id/qrImageIV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_17sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Use “Scan” in coyni app to scan the QR code "
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_11ssp" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>