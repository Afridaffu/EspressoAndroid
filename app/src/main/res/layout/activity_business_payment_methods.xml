<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.business.BusinessPaymentMethodsActivity">

    <include
        android:id="@+id/addpayment"
        layout="@layout/addpayment_method"
        android:visibility="visible" />

    <include
        android:id="@+id/paymentMethods"
        layout="@layout/paymentmethods"
        android:visibility="gone" />

    <include
        android:id="@+id/externalBank"
        layout="@layout/activity_add_external_bank_acc"
        android:visibility="gone" />

    <include
        android:id="@+id/firstError"
        layout="@layout/activity_first_tym_fail"
        android:visibility="gone" />

    <include
        android:id="@+id/banksuccess"
        layout="@layout/activity_all_done_success"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>