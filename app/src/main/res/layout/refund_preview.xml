<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_corners"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <View
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_2sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_28sdp"
        android:background="@drawable/dialog_view" />

    <LinearLayout
        android:id="@+id/refundpreviewLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text="Refund Preview"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/userRefundTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amountPayTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/primary_green"
            android:textSize="@dimen/_35sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/_6sdp"
            android:fontFamily="@font/opensans_bold"
            android:paddingTop="@dimen/_24sdp"
            android:paddingBottom="@dimen/_9sdp"
            android:text="CYN"
            android:textColor="@color/primary_green"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_regular"
            android:text="Customer Name"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="right"
            android:text=""
            android:textColor="@color/primary_black"
            android:textFontWeight="1"
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:fontFamily="@font/opensans_regular"
            android:text="Customer Address"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:id="@+id/copyRecipientLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recipAddreTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="right"
                android:textColor="@color/primary_black"
                android:textFontWeight="1"
                android:textSize="@dimen/_11ssp" />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:src="@drawable/ic_copy" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyProcessing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="Processing Fee"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_11ssp" />

            <ImageView
                android:id="@+id/infoIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_info" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvProcessingFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="right"
            android:text=""
            android:textColor="@color/primary_black"
            android:textFontWeight="1"
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/viewFeesTextLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/et_bg_gray"
            android:orientation="vertical"
            android:paddingStart="@dimen/_11sdp"
            android:paddingEnd="@dimen/_21sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/feePercentageTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:fontFamily="@font/opensans_regular"
                android:text="[0.5%] of the purchase amount is charged as a fee for this transaction."
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/viewFeesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_14sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="View Fees"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_bold"
            android:text="Total "
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_bold"
            android:gravity="right"
            android:text=""
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_21sdp"
        android:background="@color/blue_light" />

    <LinearLayout
        android:id="@+id/lyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messageTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:text="Refund Note"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/messageNoteTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/opensans_regular"
            android:text=""
            android:textColor="@color/primary_black"
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/slideToConfirmm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@drawable/shape_round_rectable"
        android:elevation="@dimen/_2sdp"
        app:layoutDescription="@xml/activity_swipe_unloack_scene"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_lable_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="Verifying"
            android:textColor="@color/primary_green"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/im_lock"
            app:layout_constraintStart_toEndOf="@+id/im_lock"
            app:layout_constraintTop_toTopOf="@+id/im_lock" />

        <com.coyni.pos.app.utils.CustomeTextView.AnimatedGradientTextView
            android:id="@+id/tv_lable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:text="Slide to Confirm"
            android:textColor="@color/primary_green"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:visibility="visible"
            app:angle="45"
            app:chainUseRtl="true"
            app:colors="@array/default_gradient_colors"
            app:layout_constraintBottom_toBottomOf="@id/im_lock"
            app:layout_constraintStart_toEndOf="@+id/im_lock"
            app:layout_constraintTop_toTopOf="@+id/im_lock"
            app:maxFPS="24"
            app:simultaneousColors="8"
            app:speed="500" />

        <androidx.cardview.widget.CardView
            android:id="@+id/im_lock"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:cardBackgroundColor="@color/slidebtn_bg"
            app:cardCornerRadius="@dimen/_21sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_double_left" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/im_lock_"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.motion.widget.MotionLayout>

</LinearLayout>