<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/passSuccLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/btnLL"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_102sdp"
                android:src="@drawable/ic_success_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_35sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="Change Password Successful"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_28sdp"
                android:layout_marginEnd="@dimen/_21sdp"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="@dimen/_6sdp"
                android:text="For security purposes, please log out and \nlog in again through the button below.\n
Thank you!"
                android:textAlignment="center"
                android:textColor="@color/primary_black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingTop="@dimen/_6sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnCV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:layout_marginStart="@dimen/_29sdp"
                android:layout_marginEnd="@dimen/_29sdp"
                android:layout_marginBottom="@dimen/_60sdp"
                app:cardBackgroundColor="@color/primary_color"
                app:cardCornerRadius="@dimen/_21sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_bold"
                    android:text="Log Out"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>