<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size
                android:width="10dp"
                android:height="10dp" />
            <padding
                android:bottom="6dp"
                android:left="6dp"
                android:right="6dp"
                android:top="6dp" />
            <solid android:color="@color/primary_color" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="4dp"
                android:height="4dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>